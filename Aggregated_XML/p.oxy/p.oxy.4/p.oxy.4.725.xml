    <lb n="31"/>χμῶν εἴκοσι <num value="20"/>, καὶ <supplied cert="high" reason="lost">τ</supplied>ῷ <num value="26">κϛ</num> <expan><ex cert="high">ἔτει</ex></expan> ὁμοίως ἄλλο<supplied cert="high" reason="lost">ν</supplied> 

    <lb n="32"/>χιτῶ<supplied cert="high" reason="lost">ν</supplied>α ἄξιον δραχμῶν εἴ<supplied cert="high" reason="lost">κ</supplied>οσι τε<supplied cert="high" reason="lost">σσάρων</supplied> <num value="24"/>, 

