    <lb n="1"/>ὁμολογοῦ<supplied cert="high" reason="lost">σιν ἀ</supplied><unclear cert="high" reason="undefined">λ</unclear>λ<supplied cert="high" reason="lost">ήλ</supplied><unclear cert="high" reason="undefined">ο</unclear><supplied cert="high" reason="lost">ι</supplied><unclear cert="high" reason="undefined">ς</unclear> <supplied cert="high" reason="lost">Πλα</supplied>-

    <lb n="2"/>τωνὶς ἡ καὶ Ὠφ<unclear cert="high" reason="undefined">ε</unclear><supplied cert="high" reason="lost">λί</supplied>α Ὡρείω<supplied cert="high" reason="lost">νος</supplied> 

    <lb n="3"/>ἀπ᾽ Ὀξυρύγχων πόλεως μετὰ <supplied cert="high" reason="lost">κυ</supplied>-

    <lb n="4"/>ρίου τοῦ ὁμογνησίου ἀδελφ<supplied cert="high" reason="lost">οῦ</supplied> 

    <lb n="5"/>Πλάτωνος καὶ <supplied cert="high" reason="lost">Λ</supplied><unclear cert="high" reason="undefined">ούκι</unclear><supplied cert="high" reason="lost">ος</supplied> Ἰ<unclear cert="high" reason="undefined">σ</unclear>ί<unclear cert="high" reason="undefined">ω</unclear>-

    <lb n="6"/>νος μητρὸς Τισάσιος ἀπ<supplied cert="high" reason="lost">ὸ</supplied> 

    <lb n="7"/>τοῦ Ἀφροδεισίου τῆς <choice><corr>Μικρᾶ<supplied cert="high" reason="lost">ς</supplied></corr><sic>μεικρα<supplied cert="high" reason="lost">ς</supplied></sic></choice> 

    <lb n="8"/>Ὀάσεως γέρδιος, ἡ μὲν Πλ<supplied cert="high" reason="lost">α</supplied>-

    <lb n="9"/>τωνὶς ἡ καὶ Ὠφελία ἐκδ<supplied cert="high" reason="lost">εδό</supplied>-

    <lb n="10"/>σθαι τῷ Λουκίῳ ἣν ἔχ<unclear cert="high" reason="undefined">ε</unclear>ι ἀφή-

    <lb n="11"/>λικα δούλην Θερμούθιον 

    <lb n="12"/>πρ<supplied cert="high" reason="lost">ὸ</supplied>ς μάθησιν τῆς γερδι<supplied cert="high" reason="lost">α</supplied>-

    <lb n="13"/>κῆς τέχνης ἐ<supplied cert="high" reason="lost">πὶ</supplied> χρόνον ἔ-

    <lb n="14"/>τη τέσσαρα <num value="4"/> ἀπὸ <unclear cert="high" reason="undefined">νεομηνία</unclear><supplied cert="high" reason="lost">ς</supplied> 

    <lb n="15"/>τοῦ ἑξῆς μηνὸς Τῦβι τοῦ 

    <lb n="16"/>ἐνεστῶτος <supplied cert="high" reason="lost">ἔτου</supplied>ς, ἐφ᾽ ἃ θρέψ<supplied cert="high" reason="lost">ειν</supplied> 

    <lb n="17"/>καὶ <choice><corr>ἱματιεῖν</corr><sic><hi rend="diaeresis">ι</hi>ματειιν</sic></choice> τὴν παῖδα 

    <lb n="18"/>καὶ παρέξεσθαι αὐτὴν τῷ 

    <lb n="19"/>διδασκάλῳ καθ᾽ ἡμέραν 

    <lb n="20"/>ἀπὸ ἀνατολῆς ἡλίου μέ-

    <lb n="21"/>χρι δύσεως ἐκτελοῦσαν 

    <lb n="22"/>πάντα τὰ ἐπιτραπησόμε-

    <lb n="23"/>να αὐτῇ ὑπ᾽ αὐτοῦ ἀνήκον-

    <lb n="24"/>τα τῇ <supplied cert="high" reason="lost">π</supplied>ροκειμένῃ τέ-

    <lb n="25"/>χνῃ, μισθοῦ ἐπὶ μὲν τὸν 

    <lb n="26"/>πρῶτον ἐνιαυτὸν κατὰ 

    <lb n="27"/>μῆνα δραχμῶν ὀκτώ <num value="8"/>, 

    <lb n="28"/>ἐπὶ δὲ τὸν δε<supplied cert="high" reason="lost">ύτ</supplied>ε<supplied cert="high" reason="lost">ρο</supplied>ν ὁ-

    <lb n="29"/>μοίως κατὰ <supplied cert="high" reason="lost">μ</supplied>ῆν<supplied cert="high" reason="lost">α</supplied> δ<supplied cert="high" reason="lost">ρα</supplied>-

    <lb n="30"/>χμῶν δεκάδυ<supplied cert="high" reason="lost">ο</supplied> <num value="12"/>, καὶ ἐ-

    <lb n="31"/>πὶ τὸν τρίτον ὁμ<supplied cert="high" reason="lost">ο</supplied>ί<supplied cert="high" reason="lost">ως</supplied> 

    <lb n="32"/>κατὰ μῆνα δραχμῶν 

    <lb n="33"/>δεκάεξ <num value="16"/>, καὶ ἐπὶ τὸν <supplied cert="high" reason="lost">τ</supplied>έτ<supplied cert="high" reason="lost">αρ</supplied>-

    <lb n="34"/>τον ἐνιαυτὸν ὁμοίω<supplied cert="high" reason="lost">ς</supplied> 

    <lb n="35"/>κατὰ μῆνα δραχμ<supplied cert="high" reason="lost">ῶν</supplied> 

    <lb n="36"/>εἴκοσι <num value="20"/>, λήμψε<unclear cert="high" reason="undefined">σ</unclear><supplied cert="high" reason="lost">θαι δ</supplied><unclear cert="high" reason="undefined">ὲ</unclear> 

    <lb n="37"/>τὴν παῖδα κατ᾽ ἔτ<supplied cert="high" reason="lost">ος εἰς</supplied> 

    <lb n="38"/>ἑορτῶν λόγον ἀργίας ἡμ<supplied cert="high" reason="lost">έ</supplied>-

    <lb n="39"/>ρας δεκαόκτω <num value="18"/>, ἐὰν δ<supplied cert="high" reason="lost">ὲ ἡ</supplied>-

    <lb n="40"/><unclear cert="high" reason="undefined">μέρας</unclear> τ<unclear cert="high" reason="undefined">ιν</unclear><supplied cert="high" reason="lost">ὰς</supplied> ἀργήσῃ ἢ ἀσθ<supplied cert="high" reason="lost">ε</supplied>-

    <lb n="41"/>νήσ<supplied cert="high" reason="lost">ῃ, το</supplied>ύτων ἐπ<supplied cert="high" reason="lost">ὶ</supplied> <unclear cert="high" reason="undefined">τ</unclear><supplied cert="high" reason="lost">ὰς ἴ</supplied>-

    <lb n="42"/>σας πα<supplied cert="high" reason="lost">ραμ</supplied>ενεῖ τῷ διδ<supplied cert="high" reason="lost">α</supplied>-

    <lb n="43"/>σκάλ<supplied cert="high" reason="lost">ῳ</supplied> μετὰ τὸν χρ<supplied cert="high" reason="lost">όνον,</supplied> 

    <lb n="44"/>τ<supplied cert="high" reason="lost">ῶ</supplied>ν <unclear cert="high" reason="undefined">τῆς</unclear> τέχνης χ<supplied cert="high" reason="lost">ειρω</supplied>-

    <lb n="45"/>ναξίων κα<supplied cert="high" reason="lost">ὶ</supplied> ἐκδόσεων <unclear cert="high" reason="undefined">τ</unclear><supplied cert="high" reason="lost">ελεσ</supplied>-

