    <lb n="18"/><choice><corr>μοι</corr><sic>μυ</sic></choice>, <choice><corr>εἴτ<supplied cert="high" reason="lost">ε</supplied></corr><sic><unclear cert="high" reason="undefined">ητ</unclear><supplied cert="high" reason="lost">ε</supplied></sic></choice><supplied cert="high" reason="lost"> τι ἄ</supplied><unclear cert="high" reason="undefined">λ</unclear>λο <choice><corr>βούλῃ</corr><sic>βουλ<add place="supralinear">λ</add>η</sic></choice>, <supplied cert="high" reason="lost">γρά</supplied><unclear cert="high" reason="undefined">ψ</unclear>ον <choice><corr>μοι</corr><sic>μυ</sic></choice>. <choice><corr>ἀσπ<supplied cert="high" reason="lost">άζ</supplied>ο-

