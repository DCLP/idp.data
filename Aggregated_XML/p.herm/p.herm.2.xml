    <lb n="19"/><gap extent="1" reason="illegible" unit="character"/>εω<unclear cert="high" reason="undefined">ς</unclear> <unclear cert="high" reason="undefined">α</unclear><gap extent="3" reason="lost" unit="character"/><unclear cert="high" reason="undefined">σ</unclear>χε<gap extent="2" reason="lost" unit="character"/> <unclear cert="high" reason="undefined">τ</unclear>ῆς θρη<supplied cert="high" reason="lost">σ</supplied><unclear cert="high" reason="undefined">κ</unclear>είας <supplied cert="high" reason="lost">τ</supplied>ῆς ἱε-

