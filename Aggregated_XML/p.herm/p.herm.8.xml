    <lb n="1"/>τῷ δεσπότῃ μου τιμι<unclear reason="undefined" cert="high">ω</unclear><supplied reason="lost" cert="high">τ</supplied><unclear reason="undefined" cert="high">ά</unclear>τῳ καὶ ε<unclear reason="undefined" cert="high">ὐλ</unclear>α<unclear reason="undefined" cert="high">βε</unclear><supplied reason="lost" cert="high">σ</supplied>τάτῳ 

    <lb n="2"/>Ἄπα Ἰωάννῃ <unclear reason="undefined" cert="high">Η</unclear><gap reason="lost" extent="3" unit="character"/><supplied reason="lost" cert="high"> Ἀ</supplied>βραὰμ 

    <lb n="3"/>ἐ<supplied reason="lost" cert="high">ν <expan>κ<ex cert="high">υρί</ex></expan>ῳ</supplied> <expan>Θ<ex cert="high">ε</ex></expan>ῷ χαίρειν. 

    <lb n="4"/>ὡ<unclear reason="undefined" cert="high">ς</unclear> <unclear reason="undefined" cert="high">καὶ</unclear> πιστεύω ὅτι μ<supplied reason="lost" cert="high">έλε</supplied>ται μου καὶ τοῦ οἴκου 

