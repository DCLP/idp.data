    <lb n="1"/>γεινώσκειν σὲ θ<unclear cert="high" reason="undefined">έ</unclear><supplied cert="high" reason="lost">λω ὅτι    </supplied><gap extent="unknown" reason="lost" unit="character"/><gap extent="4" reason="illegible" unit="character"/><gap extent="1" reason="illegible" unit="character"/> 

    <lb n="2"/>μετέλαβον τὰ <unclear cert="high" reason="undefined">κ</unclear>α<unclear cert="high" reason="undefined">τ</unclear><gap extent="unknown" reason="lost" unit="character"/> 

    <lb n="3"/>ηκες μὴ γράψας τ<unclear cert="high" reason="undefined">α</unclear><gap extent="unknown" reason="lost" unit="character"/> ἐρωτῶ σε 

    <lb n="4"/>οὖν, μῆ<supplied cert="high" reason="lost">τε</supplied>ρ, <choice><corr>γράψεις</corr><sic>γραψις</sic></choice> <unclear cert="high" reason="undefined">μ</unclear><supplied cert="high" reason="lost">οι</supplied> τὰ <unclear cert="high" reason="undefined">π</unclear><supplied cert="high" reason="lost">ε</supplied><unclear cert="high" reason="undefined">ρὶ</unclear> σεαυτῆς. 

    <lb n="5"/>τί πέπραχες εἰς Μέμφ<unclear cert="high" reason="undefined">ιν</unclear>; μὴ ἄ<unclear cert="high" reason="undefined">λ</unclear>λως 

    <lb n="6"/>ποιήσεις· γείνωσκε ὅτι Γέμελλος 

    <lb n="7"/>ἐστρά<unclear cert="high" reason="undefined">τ</unclear>ε<unclear cert="high" reason="undefined">υ</unclear>ται εἰς τὴν κλάσσαν καὶ ἔλεγε 

    <lb n="8"/>μοι ὅτι ἡ μήτηρ σοῦ δικάζεται <choice><corr>ἐν</corr><sic>εις</sic></choice> 

    <lb n="9"/>Μέμφει μετὰ τοῦ πατρὸς σοῦ 

    <lb n="10"/>ἐπὶ τῷ ἀρχιδικαστ<supplied cert="high" reason="lost">ῇ</supplied>. καλῶς ποιή<supplied cert="high" reason="lost">σεις</supplied>, 

    <lb n="11"/>μῆτερ, κομισαμέν<supplied cert="high" reason="lost">η</supplied> <unclear cert="high" reason="undefined">μ</unclear>ου <unclear cert="high" reason="undefined">τ</unclear>αύ<unclear cert="high" reason="undefined">την</unclear> 

    <lb n="12"/>τὴν ἐπιστολὴν <del rend="erasure"><gap extent="2" reason="illegible" unit="character"/>α<gap extent="1" reason="illegible" unit="character"/>λα<gap extent="1" reason="illegible" unit="character"/></del> <choice><corr>πέμψεις</corr><sic>πεμψις</sic></choice> <unclear cert="high" reason="undefined">μοι</unclear> 

    <lb n="13"/>Γερμανὸν <choice><corr>ἐπεὶ</corr><sic>επι</sic></choice> λέγε<unclear cert="high" reason="undefined">τα</unclear>ι ὅτι ἡ χώ<unclear cert="high" reason="undefined">ρτη</unclear> 

    <lb n="14"/>ἡμῶν εἰς τὴν Μαυριταν<unclear cert="high" reason="undefined">ί</unclear><supplied cert="high" reason="lost">α</supplied>ν ὑ<unclear cert="high" reason="undefined">πάγει</unclear>. 

    <lb n="15"/>μέχρι σήμερον ἡμέρας ἐξέρχεται 

    <lb n="16"/>ἡ ἄλη τῶν Μαύρων καὶ ἡ χώρτη. 

    <lb n="17"/>τῶν Ἀφρώρω<supplied cert="high" reason="lost">ν</supplied>. ἐξαναπληροῦται 

    <lb n="18"/>ἐκείνη ἡ χώρτη ἐκ τῆς ἡμῶν <expan>χώρτη[<ex cert="high">ς</ex></expan>]. 

    <lb n="19"/>ἀπὸ τριῶν <num value="3"/> ἐτῶν ἐξέρχονται. τὸ λοι-

    <lb n="20"/><supplied cert="high" reason="lost">πὸ</supplied>ν οὖν, μῆτ<supplied cert="high" reason="lost">ερ,  </supplied><gap extent="4" reason="lost" unit="character"/><gap extent="3" reason="illegible" unit="character"/>σε<gap extent="1" reason="illegible" unit="character"/><gap extent="2" reason="lost" unit="character"/>ρ<unclear cert="high" reason="undefined">ε</unclear><gap extent="4" reason="lost" unit="character"/> 

    <lb n="21"/>εὔχομα<supplied cert="high" reason="lost">ι  </supplied><gap extent="4" reason="lost" unit="character"/><gap extent="4" reason="illegible" unit="character"/>ο<unclear cert="high" reason="undefined">λ</unclear><gap extent="2" reason="illegible" unit="character"/>ς <expan>ἄσπασο<ex cert="high">ν</ex></expan> 

    <lb n="22"/>Οὐαλέριο<unclear cert="high" reason="undefined">ν</unclear> <unclear cert="high" reason="undefined">καὶ</unclear> Ἑρμανι<gap extent="3" reason="illegible" unit="character"/>ν κ<unclear cert="high" reason="undefined">αὶ</unclear> τοὺς 

    <lb n="23"/>ἐν οἴκῳ <unclear cert="high" reason="undefined">τ</unclear><gap extent="4" reason="lost" unit="character"/><gap extent="1" reason="illegible" unit="character"/>σ<gap extent="2" reason="illegible" unit="character"/>μαα<gap extent="1" reason="illegible" unit="character"/><gap extent="unknown" reason="lost" unit="character"/> 

    <lb n="24"/>δεύτερα  <gap desc="vestiges" extent="unknown" reason="illegible" unit="character"/> 

    <lb n="25"/>τη<unclear cert="high" reason="undefined">ν</unclear>   <gap desc="vestiges" extent="unknown" reason="illegible" unit="character"/> 

    <lb n="ms,1" rend="perpendicular"/> <gap extent="2" reason="illegible" unit="character"/> ἐπεξέρχ<gap extent="1" reason="illegible" unit="character"/><gap extent="2" reason="lost" unit="character"/>ι ἃ δηλώσω σοὶ δι᾽ ἐπιστολῆς εισι<gap extent="4" reason="illegible" unit="character"/><gap extent="4" reason="illegible" unit="character"/><gap extent="1" reason="illegible" unit="character"/> </ab></div><div n="meta.26497" part="N" type="description"><p><rs cert="high" type="material">Papyrus</rs></p></div><div n="meta.26497" part="N" subtype="textDate" type="commentary"><p><date notAfter="200" notBefore="101" type="textDate">II</date></p></div><div n="meta.26497" part="N" subtype="general" type="commentary"><p>Vgl. Kongr. XXIII, S. 87-93. Zu Z. 22-23 vgl. APF 53, 2007, S. 196f.</p></div><div n="meta.26497" part="N" subtype="principalEdition" type="bibliography"><listBibl><bibl subtype="principal" type="publication"><title level="s" type="abbreviated">BGU</title><biblScope type="volume">15</biblScope><biblScope type="numbers">2492</biblScope></bibl><bibl type="Trismegistos"><biblScope type="numbers">26497</biblScope></bibl><bibl type="DDbDP"><series>0001</series>; <biblScope type="volume">15</biblScope>; <biblScope type="numbers">2492</biblScope></bibl></listBibl><p>Perseus links: <xref evaluate="all" from="ROOT" href="0001;15;2492" targOrder="Y" to="DITTO" type="Perseus">Text in Perseus</xref></p></div><div n="meta.26497" part="N" subtype="illustrations" type="bibliography"><p><bibl type="illustration">Microfiche im Band</bibl></p></div><div n="meta.26497" part="N" subtype="otherPublications" type="bibliography"><head>Andere Publikation</head><bibl subtype="other" type="publication">P.Coll. Youtie I 53</bibl></div><div n="meta.26497" part="N" subtype="translations" type="bibliography"><head>Übersetzungen</head><listBibl lang="en"><head lang="de">Englisch:</head><bibl type="translations">Campbell, Roman Army (1994), 149</bibl></listBibl></div><div n="meta.26497" part