    <lb n="5"/>ησας λαβὼν <unclear cert="high" reason="undefined">παρ</unclear>᾽ ἐμ<supplied cert="high" reason="lost">ο</supplied>ῦ ἐπιστ<supplied cert="high" reason="lost">ό</supplied><unclear cert="high" reason="undefined">λ</unclear>εια δοῦ-

    <lb n="6"/><choice><corr><supplied cert="high" reason="lost">ναι</supplied></corr><sic>δω<supplied cert="high" reason="lost">ναι</supplied></sic></choice> <gap extent="13" reason="lost" unit="character"/><gap extent="1" reason="illegible" unit="character"/> οὐκ <choice><corr>ἔπεμψας</corr><sic>ε<unclear cert="high" reason="undefined">π</unclear>εμψες</sic></choice> 

    <lb n="7"/><gap extent="15" reason="lost" unit="character"/><supplied cert="high" reason="lost">           οὐ</supplied>κ <choice><corr>ἔπεμψας</corr><sic>επεμψες</sic></choice> αὐτῷ 

    <lb n="8"/><gap extent="15" reason="lost" unit="character"/><supplied cert="high" reason="lost">           μὴ</supplied> ὀκνήσῃς, γενοῦ 

    <lb n="9"/><gap extent="16" reason="lost" unit="character"/><unclear cert="high" reason="undefined">τ</unclear>ον πᾶσι, οἷς μοι 

    <lb n="10"/><gap extent="3" reason="illegible" unit="character"/><gap extent="13" reason="lost" unit="character"/><unclear cert="high" reason="undefined">ι</unclear>άσωσιν ἃ ὀφείλω-

