    <lb n="12"/><unclear cert="high" reason="undefined">μ</unclear><supplied cert="high" reason="lost">ὴν    </supplied><gap extent="13" reason="lost" unit="character"/><gap extent="3" reason="illegible" unit="character"/>ν ἐν σπέρματι 

    <lb n="13"/>δ<supplied cert="high" reason="lost">η</supplied><unclear cert="high" reason="undefined">λ</unclear>ῶσα<unclear cert="high" reason="undefined">ι</unclear> τοῦτ᾽ ἐστὶν τὰ ὀνόματα αὐτῶν 

    <lb n="14"/><choice><corr>Λογγεῖνον</corr><sic>λονγει<unclear cert="high" reason="undefined">ν</unclear>ον</sic></choice> καὶ <unclear cert="high" reason="undefined">Σερ</unclear>ῆνον <supplied cert="high" reason="omitted">καὶ</supplied> <unclear cert="high" reason="undefined">Ὀ</unclear>τρην<unclear cert="high" reason="undefined">ί</unclear>ων<unclear cert="high" reason="undefined">α</unclear> 

    <lb n="15"/><gap extent="6" reason="lost" unit="character"/><choice><corr cert="low"><supplied cert="low" reason="lost">Π</supplied>τολεμαίου</corr><sic><supplied cert="high" reason="lost">π</supplied><unclear cert="high" reason="undefined">τ</unclear>ολεμες</sic></choice> καὶ τὸν τοῦ <expan>Περ<unclear cert="high" reason="undefined">σύν</unclear><ex cert="high">ου</ex></expan> 

    <lb n="16"/>εἴ τι ἐὰν δ<add place="supralinear">ῶ</add><subst><add place="inline">σιν</add><del rend="corrected">δ<del rend="erasure">η</del>σιν</del></subst> <unclear cert="high" reason="undefined">σ</unclear>οὶ ἀπὸ μ<unclear cert="high" reason="undefined">έ</unclear>ρους, δὸς αὐ-

    <lb n="17"/>τοῖς ἀπο<unclear cert="high" reason="undefined">χὴν</unclear> <supplied cert="high" reason="lost">κ</supplied><unclear cert="high" reason="undefined">αὶ</unclear> μετάβαλε αὐτὰ Σατορνί-

    <lb n="18"/>λῳ τῷ ἀδελφῷ μο<unclear cert="high" reason="undefined">υ</unclear>, ὅτου <unclear cert="high" reason="undefined">α</unclear><gap extent="unknown" reason="lost" unit="character"/><supplied cert="high" reason="lost">    τὰ</supplied> 

    <lb n="19"/>παρ᾽ αὐτοῦ γράμματα ὀ<unclear cert="high" reason="undefined">φ</unclear><gap extent="unknown" reason="lost" unit="character"/> 

    <lb n="20"/>τοῦ Περσύνου ἀρτά<unclear cert="high" reason="undefined">βας</unclear> <gap extent="unknown" reason="lost" unit="character"/> 

    <lb n="21"/>συνλέγει <choice><corr>ἐφέτους</corr><sic>εφαιτους</sic></choice> ε<unclear cert="high" reason="undefined">π</unclear><gap extent="2" reason="illegible" unit="character"/><gap extent="unknown" reason="lost" unit="character"/> 

