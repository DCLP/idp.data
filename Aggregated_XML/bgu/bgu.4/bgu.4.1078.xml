    <lb n="2"/><space extent="unknown" unit="character" dim="horizontal"/>  <expan>Σαραπ<ex cert="low">ίωνι</ex></expan> υἱῷ νεωτέρῳ <app type="BL"><lem resp="8.40"><expan>ἐποικ<ex cert="high">ίου</ex></expan></lem><rdg><abbr>ἐποικ</abbr></rdg></app> </ab></div></div><div n="meta.9455" type="description" org="uniform" part="N" sample="complete"><p><rs type="material" cert="high">Papyrus</rs></p></div><div n="meta.9455" type="commentary" subtype="textDate" org="uniform" part="N" sample="complete"><p><date type="textDate" value="0038-10-20" notBefore="38" notAfter="38">20. Okt. 38</date></p></div><div n="meta.9455" type="commentary" subtype="general" org="uniform" part="N" sample="complete"><p>Zum Ort und zur Datierung vgl. BL VIII, S. 40.</p></div><div n="meta.9455" type="commentary" subtype="mentionedDates" org="uniform" part="N" sample="complete"><head>Erwähnte Daten</head></div><div n="meta.9455" type="bibliography" subtype="principalEdition" org="uniform" part="N" sample="complete"><listBibl default="NO"><bibl type="publication" subtype="principal" default="NO"><title level="s" type="abbreviated">BGU</title><biblScope type="volume">4</biblScope><biblScope type="numbers">1078</biblScope></bibl><bibl type="Trismegistos" default="NO"><biblScope type="numbers">9455</biblScope></bibl><bibl type="DDbDP" default="NO"><series>0001</series>; <biblScope type="volume">4</biblScope>; <biblScope type="numbers">1078</biblScope></bibl></listBibl><p>Perseus links: <xref type="Perseus" href="0001;4;1078" evaluate="all" from="ROOT" targOrder="Y" to="DITTO">Text in Perseus</xref></p></div><div n="meta.9455" type="bibliography" subtype="corrections" org="uniform" part="N" sample="complete"><head>BL-Einträge nach BL-Konkordanz</head><bibl type="BL" default="NO"><biblScope type="volume">VIII</biblScope>, S. <biblScope type="pages">40</biblScope></bibl></div><div n="meta.9455" type="bibliography" subtype="illustrations" org="uniform" part="N" sample="complete"><p><bibl type="illustrati