    <lb n="25"/>εἰς <expan>ἡμέρ<ex cert="high">ας</ex></expan> τριάκοντα <num value="30"/> ἀπὸ <num value="14">ιδ</num> τοῦ <expan>ἐνε<ex cert="high">στῶτος</ex></expan> <expan>μη<ex cert="high">νὸς</ex></expan> <expan>Φαρμ<ex cert="high">οῦθι</ex></expan> τοῦ <num value="17">ιζ</num> <expan><ex cert="high">ἔτους</ex></expan> Καίσαρος καὶ ἐ<unclear reason="undefined" cert="high">πά</unclear>-

