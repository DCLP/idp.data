    <lb n="19"/><gap reason="lost" extent="unknown" unit="character"/> 

    <lb n="19"/><gap reason="illegible" extent="1" unit="character"/><gap reason="lost" extent="1" unit="character"/><gap reason="illegible" extent="1" unit="character"/><gap reason="lost" extent="9" unit="character"/><gap reason="illegible" extent="1" unit="character"/><gap reason="lost" extent="2" unit="character"/><supplied reason="lost" cert="high"> μετὰ πλ</supplied><unclear reason="undefined" cert="high">εί</unclear><supplied reason="lost" cert="high">σ</supplied>-

    <lb n="20"/>της σ<unclear reason="undefined" cert="high">π</unclear><supplied reason="lost" cert="high">ου</supplied>δῆς <unclear reason="undefined" cert="high">κ</unclear><supplied reason="lost" cert="high">ομ</supplied><unclear reason="undefined" cert="high">ι</unclear>σθῇ. τὴν 

    <lb n="21"/>οὖν τιμὴν δήλωσόν μοι ἵ<supplied reason="lost" cert="high">ν</supplied>α 

    <lb n="22"/>Ἀπολλωνίῳ τῷ <supplied reason="lost" cert="high">ἀ</supplied>δελφῷ μ<supplied reason="lost" cert="high">ετ</supplied>α-

    <lb n="23"/>βάλωμαι. ἀσπαάζον<supplied reason="lost" cert="high">τα</supplied>ί <supplied reason="lost" cert="high">σ</supplied>ε ο<supplied reason="lost" cert="high">ἱ</supplied> παρ᾽ 

    <lb n="24"/>ἡμῶν πάντες καὶ αἱ πα<supplied reason="lost" cert="high">ρ᾽</supplied> ἡμ<supplied reason="lost" cert="high">ῶ</supplied>ν 

    <lb n="25"/>πᾶσαι. 

