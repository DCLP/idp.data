    <lb n="1"/><supplied reason="lost" cert="high">τῷ ἀγα</supplied><unclear reason="undefined" cert="high">πητ</unclear>ῷ κα<supplied reason="lost" cert="high">ὶ</supplied> θ<unclear reason="undefined" cert="high">ε</unclear>οσεβεστάτῳ πατρὶ <space extent="unknown" unit="character" dim="horizontal"/> Ἄπα <choice><corr><supplied reason="omitted" cert="high">Ἀ</supplied>ντίνῳ</corr><sic>ντινος</sic></choice>

    <lb n="2"/>Περγάμιο<supplied reason="lost" cert="high">ς</supplied> <choice><corr>πραιπόσιτος</corr><sic><unclear reason="undefined" cert="high">πρε</unclear>ποσιτος</sic></choice> Εὐλόγιος πρ<unclear reason="undefined" cert="high">ί</unclear>γκιψ. <space extent="unknown" unit="character" dim="horizontal"/>

    <lb n="3"/>ἐδεξάμεθ<unclear reason="undefined" cert="high">α</unclear> <supplied reason="lost" cert="high">γ</supplied>ρά<unclear reason="undefined" cert="high">μματα</unclear> παρὰ τῆς σ<unclear reason="undefined" cert="high">ῆ</unclear>ς <choice><corr>θεοσεβείας</corr><sic>θ<unclear reason="undefined" cert="high">ε</unclear>οσεβιας</sic></choice>, κύριε πάτερ,

    <lb n="4"/>περὶ Ὥρο<unclear reason="undefined" cert="high">υ</unclear> τοῦ ἡμετέρου στρατιώτ<unclear reason="undefined" cert="high">ο</unclear>υ <choice><corr><app type="alternative"><lem>τοῦ</lem><rdg>τῶν</rdg></app></corr><sic>τ<unclear reason="undefined" cert="high">ο</unclear>ν</sic></choice> ἀπὸ φυλάκων

    <lb n="5"/><choice><corr>ὥστε</corr><sic>ωσται</sic></choice> μὴ <choice><corr>τιθέναι</corr><sic>τηθηναι</sic></choice> εἰς τὴν ἀγραρίαν τῆς Ὀάσεως καὶ τῶν τούτων <gap reason="illegible" extent="3" unit="character"/> <note lang="en" anchored="yes" place="not specified">?</note>

    <lb n="6"/><choice><corr>θεοσέβεια <note lang="en" anchored="yes" place="not specified">?</note></corr><sic>θεοσεβιαν</sic></choice> γεγράφηκεν ἡμῖν, ἐσκεψάμεθα ὅπως <choice><corr>τοῦτο</corr><sic>τουτον</sic></choice>

    <lb n="7"/><choice><corr>συγχωρηθῇ</corr><sic>συνχωρηθηναι</sic></choice> αὐτῷ ὅτι μέτριος <choice><corr>τυγχάνει</corr><sic>τυγχανων</sic></choice> καὶ παλαιὸς <supplied reason="omitted" cert="high">σ</supplied>τρα-

    <lb n="8"/>τιώτης. <space extent="unknown" unit="character" dim="horizontal"/> οἶδ<unclear reason="undefined" cert="high">ε</unclear>ν γὰρ ἡ <choice><corr>θεία</corr><sic>θια</sic></choice> πρόνοια μὴ <choice><corr>ἔχομεν</corr><sic>εχοντες</sic></choice> τὸ καθό-

    <lb n="9"/>λον στρατιώτας εἰς τὸ κάστρον ἀλλὰ εἰς ἀγραρίας

    <lb n="10"/>σχολάζουσι<unclear reason="undefined" cert="high">ν</unclear> καὶ διὰ τὴν ἀνάγκη<unclear reason="undefined" cert="high">ν</unclear> τοῦ<unclear reason="undefined" cert="high">τ</unclear>ον ἐθήκαμεν.

    <lb n="11"/>δεξάμενοι οὖν<sic><gap reason="illegible" extent="1" unit="character"/></sic> τὰ γράμματα τῆς <choice><corr>θεοσεβείας</corr><sic>θεοσεβιαν</sic></choice> σου

    <lb n="12"/>εὐθέως <choice><corr>συνεχωρήσαμεν αὐτῷ τὴν ἐπιδημίαν</corr><sic>εσυνεχωρησαμεν αυτον εκ της επιδημιας</sic></choice>

    <lb n="13"/>εἰς <del rend="erasure" status="unremarkable">ὑ̈μετέραν</del> τιμὴν <add place="supralinear">τῆς <choice><corr>θεοσεβείας</corr><sic>θεοσεβια<unclear reason="undefined" cert="high">ς</unclear></sic></choice> σου</add> καὶ καταξίωσον, πάτερ,

    <lb n="14"/>περὶ ὧν βούλῃ κέλευε ἡμῖν ἡδέως <choice><corr>ὑπουργοῦσι</corr><sic>ϋπουργουντες</sic></choice>

    <lb n="15"/>καὶ μνήσθητι <choice><corr>ἡμῶν</corr><sic>ημιν</sic></choice> ἐν <choice><corr>ταῖς ἁγίαις εὐχαῖς</corr><sic>τες αγιες ευχες</sic></choice> <supplied reason="omitted" cert="high">σ</supplied>ου· <handShift new="m2"/> Ἐρρωμέ<sic>ν</sic>-

    <lb n="16"/>νον σε εὔχο<unclear reason="undefined" cert="high">μ</unclear>αι, κύριέ μου τιμιώτατε

    <lb n="17"/>πάτερ, χρόνοις πολλοῖς.

    <lb n="18"/><handShift new="m3"/> <choice><corr>ἐρρωμένον</corr><sic>ερρωμενος</sic></choice> <supplied reason="omitted" cert="high">σε</supplied> <choice><corr>εὔχομαι</corr><sic>ευχομε</sic></choice>

    <lb n="19"/>κύριέ μου τιμιώτατε

    <lb n="20"/>πολλοῖς χρόνοις.

    <lb n="21"/><g type="unintelligible"/>
