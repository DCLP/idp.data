    <lb n="42"/><expan><unclear cert="high" reason="undefined">δ</unclear><ex cert="high">ιὰ</ex></expan> <expan>τ<ex cert="high">ῶν</ex></expan> <expan><supplied cert="high" reason="lost">ὑ</supplied>πουργῶ<ex cert="high">ν</ex></expan> <expan>νο<ex cert="high">μίσματα</ex></expan> <num value="200">σ</num> 

    <lb n="43"/><expan><unclear cert="high" reason="undefined">γ</unclear>ί<ex cert="high">νεται</ex></expan> <expan><unclear cert="high" reason="undefined">νο</unclear><ex cert="high"><unclear cert="high" reason="undefined">μίσματα</unclear></ex></expan> <num value="400"><unclear cert="high" reason="undefined">υ</unclear></num>. </ab></div><div n="meta.19803" part="N" type="description"><p><rs cert="high" type="material">Papyrus</rs></p></div><div n="meta.19803" part="N" subtype="textDate" type="commentary"><p><date notAfter="710" notBefore="710" type="textDate" value="0710-01-01">1. Jan. 710</date></p></div><div n="meta.19803" part="N" subtype="general" type="commentary"><p>Zur Datierung vgl. RecPap 4, 1967, S. 145.</p></div><div n="meta.19803" part="N" subtype="principalEdition" type="bibliography"><listBibl><bibl subtype="principal" type="publication"><title level="s" type="abbreviated">P.Lond.</title><biblScope type="volume">4</biblScope><biblScope type="numbers">1345</biblScope></bibl><bibl type="Trismegistos"><biblScope type="numbers">19803</biblScope></bibl><bibl type="DDbDP"><series>0154</series>; <biblScope type="volume">4</biblScope>; <biblScope type="numbers">1345</biblScope></bibl></listBibl><p>Perseus links: <xref evaluate="all" from="ROOT" href="0154;4;1345" targOrder="Y" to="DITTO" type="Perseus">Text in Perseus</xref></p></div><div n="meta.19803" part="N" subtype="illustrations" type="bibliography"><p>keine</p></div><div n="meta.19803" part="N" subtype="locations" type="history"><p><placeName cert="high" type="ancientFindspot">Aphrodites Kome</placeName> (<geogName cert="high" type="nome">Antaiopolites</geogName>), <geogName cert="high" key="Aegyptus" type="ancientRegion">Egypt</geogName></p></div></body></text></TEI.2>