    <lb n="14"/>αὐτῷ <gap extent="4" reason="illegible" unit="character"/><unclear cert="high" reason="undefined">νκ</unclear><gap extent="1" reason="illegible" unit="character"/><gap extent="1" reason="lost" unit="character"/><gap extent="1" reason="illegible" unit="character"/>χ<unclear cert="high" reason="undefined">ρ</unclear><gap extent="3" reason="lost" unit="character"/><gap extent="4" reason="illegible" unit="character"/> <unclear cert="high" reason="undefined">καὶ</unclear> τῆς 

