    <lb n="14"/><supplied reason="lost" cert="high"><num value="30">λ</num></supplied> καὶ τὰς ἐπαγομένας ἡμέρας <num value="5">ε</num> οὐκ <choice><corr>εἰλήφασιν</corr><sic>ιληφασιν</sic></choice> 

    <lb n="15"/><supplied reason="lost" cert="high">ἀλλ᾽</supplied> ἢ τὸ <choice><corr>ἥμισυ</corr><sic>ημυσυ</sic></choice> τῶν <choice><corr>κυλληστίων</corr><sic>κυλ<supplied reason="lost" cert="high">λ</supplied>ηστηων</sic></choice> τ<supplied reason="lost" cert="high">ο</supplied>ῦ ἐν<supplied reason="lost" cert="high">ε</supplied>στ<supplied reason="lost" cert="high">ῶ</supplied>-

    <lb n="16"/>τος <num value="20">κ</num> <expan><ex cert="high">ἔτους</ex></expan> ἀπὸ Θῶυθ <choice><corr><num value="1">α</num></corr><sic>μεσορη <num value="30">λ</num></sic></choice> ἕως Χοίαχ <num value="9">θ</num> οὐκ <choice><corr>εἰλήφασι</corr><sic>ιληφασι</sic></choice> 

    <lb n="17"/><supplied reason="lost" cert="high">ἀλλ᾽ ἢ</supplied> τὸ <choice><corr>ἥμισυ</corr><sic>ημυσυ</sic></choice>, ἀπὸ Χοίαχ <num value="10">ι</num> ἕως τῆς σήμερον ἡμέ-

