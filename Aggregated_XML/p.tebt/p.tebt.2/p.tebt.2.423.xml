<placeName cert="high" full="yes">Tebtynis</placeName></head><div lang="grc" org="uniform" part="N" sample="complete" type="edition"><div n="r" org="uniform" part="N" sample="complete" type="textpart"><ab part="N">

    <lb n="1"/>Αὐρηλίῳ Νεμε<supplied cert="high" reason="lost">σ</supplied>ί<supplied cert="high" reason="lost">ων</supplied>ι φροντιστῇ <expan>χαίρ<ex cert="high">ειν</ex></expan> 

    <lb n="2"/>καὶ ἄλλοτέ σοι ἔγραψα ὑπομιμνήσκων 

    <lb n="3"/>περὶ τῶν ἔργων κα<supplied cert="high" reason="lost">ὶ</supplied> <unclear cert="high" reason="undefined">ἔμ</unclear>αθον εἰληφότα 

    <lb n="4"/>παρ᾽ Ἀματί<supplied cert="high" reason="lost">ο</supplied>υ τὸν ἄρακα. ἤδη οὖν 

    <lb n="5"/>ὡς δι<supplied cert="high" reason="lost">ε</supplied>τάγη χωρησάτω εἰς τὴν <unclear cert="high" reason="undefined">Τ</unclear>βε-

    <lb n="6"/>κ<unclear cert="high" reason="undefined">λῦ</unclear>τι<unclear cert="high" reason="undefined">ν</unclear> χορτάρακός τε καὶ ἄρακος 

    <lb n="7"/>μ<supplied cert="high" reason="lost">ο</supplied><unclear cert="high" reason="undefined">να</unclear>χὸς <unclear cert="high" reason="undefined">ε</unclear>ἰς <add place="supralinear">σ</add>πέρματα. περὶ τῶν βοῶν 

    <lb n="8"/>μὴ <app type="BL"><lem resp="7.271"><choice><corr>ἀμελῇς</corr><sic>αμελης</sic></choice></lem><rdg>ἀμελή<supplied cert="high" reason="omitted">σῃ</supplied>?</rdg></app> μηδὲ <choice><corr>θλῖβε</corr><sic>θλειβε</sic></choice> αὐτά, 

    <lb n="9"/>καὶ αὐτὸς γὰρ <choice><corr>ἐπίστασαι</corr><sic>επιστασε</sic></choice> ὅτι <choice><corr>ἀτροφεῖ</corr><sic>ατροφι</sic></choice>. καὶ 

    <lb n="10"/>γὰρ <choice><corr>ἐνετειλάμην</corr><sic>ενετιλαμη<supplied cert="high" reason="lost">ν</supplied></sic></choice> σοι ἀνερχόμενος 

    <lb n="11"/>γεν<supplied cert="high" reason="lost">έ</supplied>σθαι σε εἰς Νεμέρη τῆς <expan>Ὀξυρυγχ<ex cert="high">ίτου</ex></expan> 

    <lb n="12"/>πρ<supplied cert="high" reason="lost">ὸς</supplied> <choice><corr>ἀναζήτη<supplied cert="high" reason="omitted">σι</supplied>ν</corr><sic>αναζητην</sic></choice> χόρτου καὶ <choice><corr>οὔπω</corr><sic>ουπου</sic></choice> 

    <lb n="13"/>μοι ἐδήλωσας περ<supplied cert="high" reason="lost">ὶ τ</supplied><unclear cert="high" reason="undefined">ο</unclear>ύτου <subst><add place="inline">ὡς</add><del rend="corrected" status="unremarkable"><gap extent="1" reason="illegible" unit="character"/>ς</del></subst> εἰς ἀγω-

    <lb n="14"/>νίαν με γενέσθαι ἐν τῷ παρόντι. ἐὰν εὕρῃς 

    <lb n="15"/>ἀγοραστὰς τῶν <unclear cert="high" reason="undefined">πε</unclear>ρισσῶν ὄνων παρα-

    <lb n="16"/>χώρησον μέχρι <choice><corr>τρ<supplied cert="high" reason="omitted">ι</supplied>ῶν</corr><sic>τρων</sic></choice> <num value="3"/>. ἔγραψά σοι 

    <lb n="17"/>οὖν <choice><corr>ὅπως</corr><sic><supplied cert="high" reason="lost">ο</supplied>πων</sic></choice> πέμψῃς τὰ κτήνη ὑπὸ χόρτον 

    <lb n="18"/><choice><corr>Ἡρωνι</corr><sic>ηρωνει</sic></choice>· ἐὰν οὖν μ<unclear cert="high" reason="undefined">ὴ</unclear> ἦς λαβὼν τὰ πρόβα-

    <lb n="19"/>τα πρὸς κοιτασμὸ<add place="supralinear">ς</add> <unclear cert="high" reason="undefined">ἢ</unclear> μ<unclear cert="high" reason="undefined">ετ</unclear><supplied cert="high" reason="lost">ὰ σ</supplied><unclear cert="high" reason="undefined">ο</unclear>ῦ καὶ σὺ τὰ 

    <lb n="20"/>κτήνη παράσχες <choice><corr><expan><ex cert="high"><note anchored="yes" lang="en" place="not specified">?</note></ex></expan></corr><sic>παραχης</sic></choice>. <unclear cert="high" reason="undefined">ἐ</unclear><supplied cert="high" reason="lost">ὰ</supplied>ν <choice><corr>γένων<supplied cert="high" reason="omitted">ται</supplied></corr><sic>γενων</sic></choice> πρός 

    <lb n="21"/>σε ο<supplied cert="high" reason="lost">ἱ</supplied> γεωργοὶ θέλο<supplied cert="high" reason="lost">ντες</supplied> σπέρ<supplied cert="high" reason="lost">ματ</supplied>α 

    <lb n="22"/>δή<supplied cert="high" reason="lost">λω</supplied>σόν μοι τα<unclear cert="high" reason="undefined">χ</unclear><supplied cert="high" reason="lost">έως</supplied> ἵνα <unclear cert="high" reason="undefined">π</unclear><supplied cert="high" reason="lost">έμ</supplied>ψω 

    <lb n="23"/><unclear cert="high" reason="undefined">πο</unclear>θ<unclear cert="high" reason="undefined">ὲν</unclear> αὐτοῖς μέτρ<supplied cert="high" reason="lost">α τιν</supplied><unclear cert="high" reason="undefined">ά</unclear>. <choice><corr>γινώσκειν</corr><sic>γινω<supplied cert="high" reason="lost">σ</supplied>κιν</sic></choice> δέ σε 

    <lb n="24"/>θέλω ὅτι τὰς <num value="2">β</num> <supplied cert="high" reason="lost">ἀρ</supplied><unclear cert="high" reason="undefined">ούρα</unclear><supplied cert="high" reason="lost">ς</supplied> τῆς <unclear cert="high" reason="undefined">Ῥ</unclear>εγνυ-

    <lb n="25"/>τι<gap extent="2" reason="lost" unit="character"/><supplied cert="high" reason="lost">ο</supplied>υ τῆς Λαβ<unclear cert="high" reason="undefined">έ</unclear><supplied cert="high" reason="lost">ω</supplied><unclear cert="high" reason="undefined">ν</unclear>ος ἠγόρασα· 

    <lb n="26"/>γενοῦ <unclear cert="high" reason="undefined">οὖ</unclear><supplied cert="high" reason="lost">ν</supplied> <choice><corr>ἐκεῖ</corr><sic>εκι</sic></choice> π<supplied cert="high" reason="lost">ρ</supplied>ὸς <unclear cert="high" reason="undefined">κ</unclear>α<unclear cert="high" reason="undefined">τ</unclear>εργα<supplied cert="high" reason="lost">σί</supplied><unclear cert="high" reason="undefined">α</unclear>ν αὐτῶν 

    <lb n="27"/>καὶ ἀπ<supplied cert="high" reason="lost">όλυ</supplied><unclear cert="high" reason="undefined">ε</unclear> τὸν <subst><add place="inline">γεωργόν</add><del rend="corrected" status="unremarkable"><supplied cert="high" reason="lost">γ</supplied>εωργων</del></subst>. ἆρα μὴ 

    <lb n="28"/>α<gap extent="2" reason="illegible" unit="character"/><gap extent="4" reason="lost" unit="character"/><unclear cert="high" reason="undefined">ο</unclear>στολ<unclear cert="high" reason="undefined">ο</unclear><gap extent="2" reason="lost" unit="character"/> <unclear cert="high" reason="undefined">τῆ</unclear>ς λινοκαλάμης 

    <lb n="29"/>π<unclear cert="high" reason="undefined">α</unclear><supplied cert="high" reason="lost">ρα</supplied><gap extent="4" reason="lost" unit="character"/>σον <supplied cert="high" reason="lost">εἰς τὸ</supplied> ἐποίκιον καὶ ἐπι-

    <lb n="30"/>κ<unclear cert="high" reason="undefined">ο</unclear><supplied cert="high" reason="lost">ίτησον</supplied> ἕως <unclear cert="high" reason="undefined">λ</unclear><supplied cert="high" reason="lost">ά</supplied><unclear cert="high" reason="undefined">β</unclear>ῃς τὴν τιμήν, 

    <lb n="31"/>κ<unclear cert="high" reason="undefined">αὶ</unclear> <supplied cert="high" reason="lost">περὶ δὲ</supplied> <unclear cert="high" reason="undefined">ὧ</unclear>ν <unclear cert="high" reason="undefined">σ</unclear><supplied cert="high" reason="lost">οι δέδ</supplied>ωκα ἔργων εἰς τὸ 

    <lb n="32"/>ἐπ<supplied cert="high" reason="lost">ο</supplied>ί<supplied cert="high" reason="lost">κι</supplied>ον μελη<supplied cert="high" reason="lost">σάτω</supplied> <choice><corr>λαβεῖν</corr><sic>λαβιν</sic></choice> αὐτά. ἐὰν 

    <lb n="33"/>καλῶς <app type="BL"><lem resp="4.98"><seg cert="low" part="N">πράσσῃ Σ<supplied cert="low" reason="lost">τρ</supplied><unclear cert="low" reason="undefined">άβω</unclear>ν</seg></lem><rdg>πράσσῃς <supplied cert="high" reason="lost">λ</supplied><unclear cert="high" reason="undefined">αβὼ</unclear>ν</rdg></app> πανταχόθεν 

    <lb n="34"/>ἀγόρασον α<unclear cert="high" reason="undefined">ὐτ</unclear><supplied cert="high" reason="lost">ο</supplied>ῦ καλὸν χιτῶνα 

    <lb n="35"/>ἄξι<supplied cert="high" reason="lost">ο</supplied>ν <expan><ex cert="high">δραχμῶν</ex></expan> <num value="40">μ</num>. 

    <lb n="36"/>ἐρρῶσθαί <supplied cert="high" reason="lost">σε εὔχο</supplied>μαι. 
