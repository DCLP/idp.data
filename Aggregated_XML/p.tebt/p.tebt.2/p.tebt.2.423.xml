    <lb n="26"/>γενοῦ <unclear reason="undefined" cert="high">οὖ</unclear><supplied reason="lost" cert="high">ν</supplied> <choice><corr>ἐκεῖ</corr><sic>εκι</sic></choice> π<supplied reason="lost" cert="high">ρ</supplied>ὸς <unclear reason="undefined" cert="high">κ</unclear>α<unclear reason="undefined" cert="high">τ</unclear>εργα<supplied reason="lost" cert="high">σί</supplied><unclear reason="undefined" cert="high">α</unclear>ν αὐτῶν 

    <lb n="27"/>καὶ ἀπ<supplied reason="lost" cert="high">όλυ</supplied><unclear reason="undefined" cert="high">ε</unclear> τὸν <subst><add place="inline">γεωργόν</add><del rend="corrected" status="unremarkable"><supplied reason="lost" cert="high">γ</supplied>εωργων</del></subst>. ἆρα μὴ 

    <lb n="28"/>α<gap reason="illegible" extent="2" unit="character"/><gap reason="lost" extent="4" unit="character"/><unclear reason="undefined" cert="high">ο</unclear>στολ<unclear reason="undefined" cert="high">ο</unclear><gap reason="lost" extent="2" unit="character"/> <unclear reason="undefined" cert="high">τῆ</unclear>ς λινοκαλάμης 

    <lb n="29"/>π<unclear reason="undefined" cert="high">α</unclear><supplied reason="lost" cert="high">ρα</supplied><gap reason="lost" extent="4" unit="character"/>σον <supplied reason="lost" cert="high">εἰς τὸ</supplied> ἐποίκιον καὶ ἐπι-

    <lb n="30"/>κ<unclear reason="undefined" cert="high">ο</unclear><supplied reason="lost" cert="high">ίτησον</supplied> ἕως <unclear reason="undefined" cert="high">λ</unclear><supplied reason="lost" cert="high">ά</supplied><unclear reason="undefined" cert="high">β</unclear>ῃς τὴν τιμήν, 

    <lb n="31"/>κ<unclear reason="undefined" cert="high">αὶ</unclear> <supplied reason="lost" cert="high">περὶ δὲ</supplied> <unclear reason="undefined" cert="high">ὧ</unclear>ν <unclear reason="undefined" cert="high">σ</unclear><supplied reason="lost" cert="high">οι δέδ</supplied>ωκα ἔργων εἰς τὸ 

    <lb n="32"/>ἐπ<supplied reason="lost" cert="high">ο</supplied>ί<supplied reason="lost" cert="high">κι</supplied>ον μελη<supplied reason="lost" cert="high">σάτω</supplied> <choice><corr>λαβεῖν</corr><sic>λαβιν</sic></choice> αὐτά. ἐὰν 

