    <lb n="1"/>Αὐρηλίῳ Νεμε<supplied reason="lost" cert="high">σ</supplied>ί<supplied reason="lost" cert="high">ων</supplied>ι φροντιστῇ <expan>χαίρ<ex cert="high">ειν</ex></expan> 

    <lb n="2"/>καὶ ἄλλοτέ σοι ἔγραψα ὑπομιμνήσκων 

    <lb n="3"/>περὶ τῶν ἔργων κα<supplied reason="lost" cert="high">ὶ</supplied> <unclear reason="undefined" cert="high">ἔμ</unclear>αθον εἰληφότα 

    <lb n="4"/>παρ᾽ Ἀματί<supplied reason="lost" cert="high">ο</supplied>υ τὸν ἄρακα. ἤδη οὖν 

    <lb n="5"/>ὡς δι<supplied reason="lost" cert="high">ε</supplied>τάγη χωρησάτω εἰς τὴν <unclear reason="undefined" cert="high">Τ</unclear>βε-

    <lb n="6"/>κ<unclear reason="undefined" cert="high">λῦ</unclear>τι<unclear reason="undefined" cert="high">ν</unclear> χορτάρακός τε καὶ ἄρακος 

    <lb n="7"/>μ<supplied reason="lost" cert="high">ο</supplied><unclear reason="undefined" cert="high">να</unclear>χὸς <unclear reason="undefined" cert="high">ε</unclear>ἰς <add place="supralinear">σ</add>πέρματα. περὶ τῶν βοῶν 

    <lb n="8"/>μὴ <app type="BL"><lem resp="7.271"><choice><corr>ἀμελῇς</corr><sic>αμελης</sic></choice></lem><rdg>ἀμελή<supplied reason="omitted" cert="high">σῃ</supplied>?</rdg></app> μηδὲ <choice><corr>θλῖβε</corr><sic>θλειβε</sic></choice> αὐτά, 

    <lb n="9"/>καὶ αὐτὸς γὰρ <choice><corr>ἐπίστασαι</corr><sic>επιστασε</sic></choice> ὅτι <choice><corr>ἀτροφεῖ</corr><sic>ατροφι</sic></choice>. καὶ 

    <lb n="10"/>γὰρ <choice><corr>ἐνετειλάμην</corr><sic>ενετιλαμη<supplied reason="lost" cert="high">ν</supplied></sic></choice> σοι ἀνερχόμενος 

    <lb n="11"/>γεν<supplied reason="lost" cert="high">έ</supplied>σθαι σε εἰς Νεμέρη τῆς <expan>Ὀξυρυγχ<ex cert="high">ίτου</ex></expan> 

    <lb n="12"/>πρ<supplied reason="lost" cert="high">ὸς</supplied> <choice><corr>ἀναζήτη<supplied reason="omitted" cert="high">σι</supplied>ν</corr><sic>αναζητην</sic></choice> χόρτου καὶ <choice><corr>οὔπω</corr><sic>ουπου</sic></choice> 

    <lb n="13"/>μοι ἐδήλωσας περ<supplied reason="lost" cert="high">ὶ τ</supplied><unclear reason="undefined" cert="high">ο</unclear>ύτου <subst><add place="inline">ὡς</add><del rend="corrected" status="unremarkable"><gap reason="illegible" extent="1" unit="character"/>ς</del></subst> εἰς ἀγω-

    <lb n="14"/>νίαν με γενέσθαι ἐν τῷ παρόντι. ἐὰν εὕρῃς 

    <lb n="15"/>ἀγοραστὰς τῶν <unclear reason="undefined" cert="high">πε</unclear>ρισσῶν ὄνων παρα-

    <lb n="16"/>χώρησον μέχρι <choice><corr>τρ<supplied reason="omitted" cert="high">ι</supplied>ῶν</corr><sic>τρων</sic></choice> <num value="3"/>. ἔγραψά σοι 

    <lb n="17"/>οὖν <choice><corr>ὅπως</corr><sic><supplied reason="lost" cert="high">ο</supplied>πων</sic></choice> πέμψῃς τὰ κτήνη ὑπὸ χόρτον 

    <lb n="18"/><choice><corr>Ἡρωνι</corr><sic>ηρωνει</sic></choice>· ἐὰν οὖν μ<unclear reason="undefined" cert="high">ὴ</unclear> ἦς λαβὼν τὰ πρόβα-

    <lb n="19"/>τα πρὸς κοιτασμὸ<add place="supralinear">ς</add> <unclear reason="undefined" cert="high">ἢ</unclear> μ<unclear reason="undefined" cert="high">ετ</unclear><supplied reason="lost" cert="high">ὰ σ</supplied><unclear reason="undefined" cert="high">ο</unclear>ῦ καὶ σὺ τὰ 

    <lb n="20"/>κτήνη παράσχες <choice><corr><expan><ex cert="high"><note lang="en" anchored="yes" place="not specified">?</note></ex></expan></corr><sic>παραχης</sic></choice>. <unclear reason="undefined" cert="high">ἐ</unclear><supplied reason="lost" cert="high">ὰ</supplied>ν <choice><corr>γένων<supplied reason="omitted" cert="high">ται</supplied></corr><sic>γενων</sic></choice> πρός 

    <lb n="21"/>σε ο<supplied reason="lost" cert="high">ἱ</supplied> γεωργοὶ θέλο<supplied reason="lost" cert="high">ντες</supplied> σπέρ<supplied reason="lost" cert="high">ματ</supplied>α 

    <lb n="22"/>δή<supplied reason="lost" cert="high">λω</supplied>σόν μοι τα<unclear reason="undefined" cert="high">χ</unclear><supplied reason="lost" cert="high">έως</supplied> ἵνα <unclear reason="undefined" cert="high">π</unclear><supplied reason="lost" cert="high">έμ</supplied>ψω 

    <lb n="23"/><unclear reason="undefined" cert="high">πο</unclear>θ<unclear reason="undefined" cert="high">ὲν</unclear> αὐτοῖς μέτρ<supplied reason="lost" cert="high">α τιν</supplied><unclear reason="undefined" cert="high">ά</unclear>. <choice><corr>γινώσκειν</corr><sic>γινω<supplied reason="lost" cert="high">σ</supplied>κιν</sic></choice> δέ σε 

