    <lb n="1"/><gap extent="1" extentmax="2" reason="lost" unit="character"/><gap extent="1" reason="illegible" unit="character"/>αχθεις παρὰ τῶν ἁγίων ἐρημ<unclear cert="high" reason="undefined">ιτ</unclear>ῶ<unclear cert="high" reason="undefined">ν</unclear> <gap extent="4" reason="illegible" unit="character"/>χ<gap extent="3" reason="illegible" unit="character"/>π<gap extent="4" reason="illegible" unit="character"/><unclear cert="high" reason="undefined">ων</unclear> τῆ<unclear cert="high" reason="undefined">ς</unclear> διακονία<unclear cert="high" reason="undefined">ς</unclear> <expan>κ<ex cert="high">αὶ</ex></expan> <unclear cert="high" reason="undefined">το</unclear>ῦ π<unclear cert="high" reason="undefined">α</unclear>τρὸς

    <lb n="2"/><supplied cert="high" reason="lost">ἡμ</supplied>ῶν καὶ <add place="supralinear">ἐν</add> μακαρίοις τὴ<add place="supralinear">ν</add> μνήμην Ἀπολλῶτος ὀνό<supplied cert="high" reason="lost">μα</supplied><unclear cert="high" reason="undefined">τ</unclear>ος ἀκηδιάσας <unclear cert="high" reason="undefined">Ἐ</unclear>νὼχ ὁ <expan>εὐλαβ<ex cert="high">έστατος</ex></expan>

    <lb n="3"/><supplied cert="high" reason="lost">οἰ</supplied>κονόμος αὐτῆς διὰ τὰ ἀφαιρηθέντα ζῷα καὶ <unclear cert="high" reason="undefined">κ</unclear>λαπέντα τῆς αὐτῆ<unclear cert="high" reason="undefined">ς</unclear> <unclear cert="high" reason="undefined">δ</unclear>ιακονίας

    <lb n="4"/><gap extent="2" extentmax="3" reason="lost" unit="character"/><unclear cert="high" reason="undefined">η</unclear><gap extent="1" reason="lost" unit="character"/>τησεν ἀναχωρῆσαι καὶ ἐᾶσαι <unclear cert="high" reason="undefined">τ</unclear>ὸν ἅγιον τόπ<unclear cert="high" reason="undefined">ο</unclear>ν ἀδιοίκητον εἰς βλάβην

    <lb n="5"/><supplied cert="high" reason="lost">το<add place="supralinear">ῦ</add> </supplied><gap extent="3" reason="illegible" unit="character"/><unclear cert="high" reason="undefined">ο</unclear>τάτου δημοσί<unclear cert="high" reason="undefined">ο</unclear><add place="supralinear"><unclear cert="high" reason="undefined">υ</unclear></add> <unclear cert="high" reason="undefined">λ</unclear>όγ<unclear cert="high" reason="undefined">ο</unclear>υ κ<unclear cert="high" reason="undefined">α</unclear>ὶ <unclear cert="high" reason="undefined">το</unclear>ῦτο μ<unclear cert="high" reason="undefined">α</unclear>θὼν ο<gap extent="3" reason="illegible" unit="character"/>λεγον δυσωπῆσαι αὐτὸν

    <lb n="6"/>καὶ ψυχαγωγῆσαι τοῦ μεῖναι χάριν καὶ πολλὰ πάνυ ποιήσας ἕως <add place="supralinear">οὗ</add> ἐδυνήθην

    <lb n="7"/>πεῖσαι αὐτὸν πεμφθέντα μεθ᾽ ἑτέρων μοναζόντων ἐπὶ τὰ ἄνω μέρη δ<supplied cert="high" reason="lost">ι</supplied>ὰ τὰ αὐτὰ

    <lb n="8"/>ζῷα εἴ πο<unclear cert="high" reason="undefined">υ</unclear> εὕρωσι ταῦτα ἀναλαβε<gap extent="3" extentmax="4" reason="lost" unit="character"/> <unclear cert="high" reason="undefined">τ</unclear>ο<add place="supralinear">ῦ</add> δ᾽ ἀνεῖναι ἐδηλώθησαν παρὰ τῶν ἀπο-

    <lb n="9"/>βολιμαίων ἀγροφυλάκων τῆς κώμ<supplied cert="high" reason="lost">ης</supplied> ἡμῶν καὶ δυσσεβῶν καὶ ὑπερθετικῶν

    <lb n="10"/>χλευαζόντων αὐτὸν ἡμέριον τὴν <supplied cert="high" reason="lost">αὐ</supplied><unclear cert="high" reason="undefined">τ</unclear>ῶν παραγωγὴν ποιῆσαι οὐκ ἐποίησαν.

    <lb n="11"/>διὸ τοί<unclear cert="high" reason="undefined">νυ</unclear>ν παρακαλῶ τὴ<unclear cert="high" reason="undefined">ν</unclear> ἀεὶ προ<unclear cert="high" reason="undefined">σ</unclear><supplied cert="high" reason="lost">κ</supplied>υνουμένην <supplied cert="high" reason="lost">π</supplied>ᾶσι λαμπρὰν ὑμῶν δεσποτείαν

    <lb n="12"/>εἰς χάριν τοῦ θεοῦ πρὸ πάντων καὶ τοῦ μακα<unclear cert="high" reason="undefined">ρ</unclear>ίτο<add place="supralinear">υ</add> ἡμῶν πατρὸς καὶ τῆς ὑμῶν φυχῆς τὸ

    <lb n="13"/>συμ<unclear cert="high" reason="undefined">β</unclear>αλλόμενον κελεῦσαι ἐναπο<gap extent="2" extentmax="3" reason="lost" unit="character"/> φροντίζειν ἐκ ψυχῆς το<add place="supralinear">ῦ</add> αὐτοῦ ἁγί<add place="supralinear">ου</add> τόπο<add place="supralinear">υ</add>

    <lb n="14"/>ἀδιαφόρως ὡς ἰδίου ὑμῶν ὄντ<supplied cert="high" reason="lost">ος</supplied> καὶ ἀποπαῦσαι Λουκανὸν ἢ <expan>κ<ex cert="high">αὶ</ex></expan> λοιπὸύ̀ς τοὺς

    <lb n="15"/>θέλοντας καινοτομῆσαι τὸ εὐαγ<supplied cert="high" reason="lost">ὲς ὄ</supplied>ρος καὶ παρὰ ἔθος ἕλκεσθαι ζητο<add place="supralinear">ῦ</add>ντας το<add place="supralinear">ῦ</add>το

    <lb n="16"/>εἰς Ἀφαριανο<add place="supralinear">ὺ</add>ς λόγους <gap extent="12" reason="illegible" unit="character"/> <unclear cert="high" reason="undefined">κτ</unclear>ή<unclear cert="high" reason="undefined">τω</unclear>ρ ἐστὶ<unclear cert="high" reason="undefined">ν</unclear> <unclear cert="high" reason="undefined">Λο</unclear>υκανὸς <expan>κ<ex cert="high">αὶ</ex></expan> οἱ λοιποὶ <expan>κ<ex cert="high">αὶ</ex></expan> ο<add place="supralinear">ὐ</add>δέποτε

    <lb n="17"/>ἐξ ἔθους δεδώκασιν δεσποτικὴ<unclear cert="high" reason="undefined">ν</unclear> πρόσοδον τούτο<add place="supralinear">υ</add> το<add place="supralinear">ῦ</add> τρόπου κτήτωρ ἐστὶν καὶ

    <lb n="18"/>αὐτὸς ὁ εὐαγὴς <expan>θ<ex cert="high">εο</ex></expan>ῦ οἶκος. μὴ οὗν ἐπιλάθεσθε τῆς ἐνο<add place="supralinear">ύ</add>σης ὑμῖν κατὰ <expan>θ<ex cert="high">εὸ</ex></expan>ν εὐσεβείας

    <lb n="19"/>καὶ τῆς μνήμης τῶν ἀλλήλους φιλούν<supplied cert="high" reason="lost">τω</supplied><unclear cert="high" reason="undefined">ν</unclear> μακαριτῶν ἡμῶν πατέρων ἐξαιρέτως δὲ τῆς

    <lb n="20"/>παραθέσεως τοῦ <expan>μεγαλοπρ<hi rend="superscript">ε</hi><ex cert="high">πεστάτου</ex></expan> κόμετο<supplied cert="high" reason="lost">ς Δω</supplied>ροθέου παραγγείλαντος ὑμῖν φροντίζειν το<add place="supralinear">ῦ</add>

    <lb n="21"/>αὐτοῦ ὄρους διὰ τὸ ψυχωφελὲς πρὸ π<supplied cert="high" reason="lost">άντ</supplied>ων καὶ διὰ τὴν πλείστην εὔνοιαν ἣν ἔχει ἐκ παιδὸς

    <lb n="22"/><gap extent="16" extentmax="17" reason="lost" unit="character"/><unclear cert="high" reason="undefined">ε</unclear>ι<unclear cert="high" reason="undefined">ς</unclear> τὸν <expan>θεοφιλέστ<ex cert="high">ατον</ex></expan> ἄπα Τατιανὸν ἀδελφὸν αὐτο<add place="supralinear">ῦ</add> ὄντα κατὰ
</ab></div><div n="v" org="uniform" part="N" sample="complete" type="textpart"><ab part="N">

    <lb n="23"/><g type="stauros"/> μητέρα αὐτοῦ τροφὸ<unclear cert="high" reason="undefined">ν</unclear> μεγάλ<unclear cert="high" reason="undefined">η</unclear>ν αὐ<supplied cert="high" reason="lost">τοῦ γ</supplied>εναμένην καὶ παρίδητε καὶ συγχωρήσητε τὸν

    <lb n="24"/>εὐαγῆ <expan>θ<ex cert="high">εο</ex></expan>ῦ οἶκον καινοτομηθῆναι ἐπ<supplied cert="high" reason="lost">ὶ τῆς</supplied> ὑμῶν διοικήσεως ὅπερ οὐκ ἐξεγένετο

    <lb n="25"/>πρὸ ὑμῶν ὅπως ἂ<unclear cert="high" reason="undefined">ν</unclear> τὰ πλεῖστα ἐν το<add place="supralinear">ύ</add>τῳ εὐχαριστήσω καὶ ἐπὶ πλεῖον ὁ θεσπέσιος ἄγγελος

    <lb n="26"/>τοῦ τόπο<add place="supralinear">υ</add> καὶ τῶν ἁγίων ἐρημιτῶν <expan>μοναζ<ex cert="high">όντων</ex></expan> ἡκαί<add place="supralinear">ως</add> ἀντεισάξῃ ὑμῖν <expan>κ<ex cert="high">αὶ</ex></expan> τοῖς <expan>ὑμετέρ<ex cert="high">οις</ex></expan> υἱοῖς

    <lb n="27"/>ἀφόρητα ἀγαθὰ ἔπειτα δὲ ὅπως <supplied cert="high" reason="lost">ἂν</supplied> <unclear cert="high" reason="undefined">ο</unclear>ἱ μον<unclear cert="high" reason="undefined">αχ</unclear>οὶ τὴν εὐεργεσίαν ὑμῶν ἐξείπωσι

    <lb n="28"/>τῷ αὐτῷ ὄ<unclear cert="high" reason="undefined">ρει</unclear> <gap extent="2" extentmax="3" reason="lost" unit="character"/><unclear cert="high" reason="undefined">λ</unclear>κ<unclear cert="high" reason="undefined">ον</unclear> ἀλλ᾽ εὐαγγελ<supplied cert="high" reason="lost">ιζό</supplied>μενοι πανταχῇ τὸ κλέος ὑμῶν εἰς ἔ<unclear cert="high" reason="undefined">π</unclear>αινον ὑμῶ<add place="supralinear">ν</add>

    <lb n="29"/>πάντοτε<gap extent="3" reason="illegible" unit="character"/><unclear cert="high" reason="undefined">ασ</unclear>α<unclear cert="high" reason="undefined">μ</unclear>εν ὅλοι. τόδε <gap extent="5" reason="illegible" unit="character"/><gap extent="2" extentmax="3" reason="lost" unit="character"/><gap extent="3" reason="illegible" unit="character"/>ς ἐμοῦ π<unclear cert="high" reason="undefined">ρ</unclear>ὸς ὑμᾶς ὁ ἐ<supplied cert="high" reason="lost">μὸς</supplied> ἀσπασμὸς καὶ ἡ ἐμὴ

    <lb n="30"/>προσκύνησι<unclear cert="high" reason="undefined">ς</unclear> <gap extent="5" reason="illegible" unit="character"/><unclear cert="high" reason="undefined">πο</unclear><gap extent="2" reason="illegible" unit="character"/>

