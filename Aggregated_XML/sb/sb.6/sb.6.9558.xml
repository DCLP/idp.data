    <lb n="1"/>Φλά<unclear cert="high" reason="undefined">ου</unclear><supplied cert="high" reason="lost">ι</supplied><unclear cert="high" reason="undefined">ο</unclear>ς Ἀσ<unclear cert="high" reason="undefined">κ</unclear><supplied cert="high" reason="lost">ληπιάδης λογιστὴς τῆς λαμπροτάτης Ἑρμουπόλεως</supplied> 

    <lb n="2"/>μαρτύ<supplied cert="high" reason="lost">ρο</supplied>μαι <gap extent="unknown" reason="lost" unit="character"/> <choice><corr>λειτο<supplied cert="high" reason="lost">υργ</supplied>ίας</corr><sic>λειτο<supplied cert="high" reason="lost">υργ</supplied><unclear cert="high" reason="undefined">ειας</unclear></sic></choice> 

    <lb n="3"/>ὡς οὐ φ<unclear cert="high" reason="undefined">υ</unclear>γ<unclear cert="high" reason="undefined">ὼν</unclear> τὴν ἐνχει<unclear cert="high" reason="undefined">ρ</unclear><supplied cert="high" reason="lost">ισθεῖσάν μ</supplied><unclear cert="high" reason="undefined">οι</unclear> <choice><corr>πίστιν</corr><sic>πιστε<unclear cert="high" reason="undefined">ιν</unclear></sic></choice> τῆς λογιστείας ὑπὸ τῶν δεσποτῶν τῆς 

