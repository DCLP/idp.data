    <lb n="1"/>ὁμολογοῦσιν ἀλλ<unclear reason="undefined" cert="high">ή</unclear>[λοις Ἑρμᾶς καὶ Παποντῶς γέρδιος <note lang="en" anchored="yes" place="not specified">?</note> ἀμφό-]

    <lb n="2"/>τεροι Ἑρμᾶτος τῶν <supplied reason="lost" cert="high">ἀπὸ Ὀξυρύγχων πόλεως ὁ μὲν</supplied>

    <lb n="3"/>Ἑρμᾶς ἐκδεδόσ<unclear reason="undefined" cert="high">θ</unclear><supplied reason="lost" cert="high">αι τῷ Παποντῶτι τὸν ἑαυτοῦ</supplied>

    <lb n="4"/>ἀφήλικα υἱὸν Ἑρμῆ<supplied reason="lost" cert="high">ν ἀπὸ τῆς ἐνεστώσης ἡμέ-</supplied>

    <lb n="5"/>ρας ἕως <num value="3">γ</num> ἐπαγομ<unclear reason="undefined" cert="high">έ</unclear>[νων τοῦ εἰσιόντος <note lang="en" anchored="yes" place="not specified">?</note> <gap reason="illegible" extent="1" extentmax="2" unit="character"/> ἔτους]

    <lb n="6"/>Αὐτοκράτορος Καίσ<supplied reason="lost" cert="high">αρος Νέρουα Τραιανοῦ Σεβαστοῦ</supplied>

    <lb n="7"/>Γερμανικοῦ διακο<supplied reason="lost" cert="high">νοῦντα καὶ ποιοῦντα τὰ ἐργα</supplied>

    <lb n="8"/>πάντα τὰ ἐπιτασ<unclear reason="undefined" cert="high">σ</unclear><supplied reason="lost" cert="high">όμενα αὐτῷ ὑπὸ τοῦ αὐτοῦ</supplied>

    <lb n="9"/>Παποντῶτος κατ[ὰ τὴν γερδιακὴν <note lang="en" anchored="yes" place="not specified">?</note> τέχνην πᾶσαν <note lang="en" anchored="yes" place="not specified">?</note>]

    <lb n="10"/>ἥνπερ καὶ αὐτὸς ἐ<supplied reason="lost" cert="high">κδιδάξει τὸν παῖδ καθὼς καὶ αὐτὸς</supplied>

    <lb n="11"/>ἐπίσταται τῷ προκε<unclear reason="undefined" cert="high">ι</unclear>[μένῳ χρόνῳ <note lang="en" anchored="yes" place="not specified">?</note> ἐφ᾽ ᾧ <gap reason="illegible" extent="unknown" unit="character"/> ]

    <lb n="12"/><unclear reason="undefined" cert="high">θρ</unclear><supplied reason="lost" cert="high">έ</supplied>ψει ὁ Ἑρμᾶς τ<unclear reason="undefined" cert="high">ὸ</unclear>ν [παῖδα <note lang="en" anchored="yes" place="not specified">?</note> <gap reason="illegible" extent="unknown" unit="character"/> ]

    <lb n="13"/>θαι καὶ δ<unclear reason="undefined" cert="high">ιορ</unclear>θώσ<unclear reason="undefined" cert="high">ετ</unclear>[αι ὁ Παποντῶς <note lang="en" anchored="yes" place="not specified">?</note> τὰ ὑπὲρ τοῦ παι-]

    <lb n="14"/>δὸς τῆς τέχνης δ<unclear reason="undefined" cert="high">η</unclear>[μόσια πάντα <note lang="en" anchored="yes" place="not specified">?</note>. ἐὰν δὲ καὶ]

    <lb n="15"/>ὁ αὐτὸς παῖς ἐν τῶ<unclear reason="undefined" cert="high">ι</unclear> <supplied reason="lost" cert="high">αὐτῶι χρόνωι ἀπαιτηθῇ τὰ</supplied>

    <lb n="16"/>λα<unclear reason="undefined" cert="high">ο</unclear><supplied reason="lost" cert="high">γ</supplied><unclear reason="undefined" cert="high">ρ</unclear>α<unclear reason="undefined" cert="high">φ</unclear>ίας δημόσι[α, ταῦτα διορθώσε- <note lang="en" anchored="yes" place="not specified">?</note>]

    <lb n="17"/>ται ὁ αὐτὸς πατὴρ <app type="alternative"><lem><unclear reason="undefined" cert="high">ο</unclear><gap reason="lost" extent="unknown" unit="character"/></lem><rdg><unclear reason="undefined" cert="high">ε</unclear><gap reason="lost" extent="unknown" unit="character"/></rdg></app>

    <lb n="18"/>ται παρὰ τοῦ <app type="alternative"><lem>σ<unclear reason="undefined" cert="high">ο</unclear>[ <gap reason="illegible" extent="unknown" unit="character"/></lem><rdg>σ<unclear reason="undefined" cert="high">θ</unclear>[ <gap reason="illegible" extent="unknown" unit="character"/></rdg></app> κατὰ μῆνα <note lang="en" anchored="yes" place="not specified">?</note>]

    <lb n="19"/>ἕκαστον δραχμῶ<unclear reason="undefined" cert="high">ν</unclear> [ <gap reason="illegible" extent="unknown" unit="character"/> <app type="alternative"><lem>ἀργήσει</lem><rdg>λήμψεται</rdg></app> δὲ ὁ παῖς]

    <lb n="20"/>εἰς λόγον ἑορτῶν <supplied reason="lost" cert="high">καθ᾽ ἕκαστον ἔτος</supplied>

    <lb n="21"/>ἡμέρας πέντε <num value="5"/>. εφ᾽ [ἃς δ᾽ ἂν πλείονας τούτων <note lang="en" anchored="yes" place="not specified">?</note> ἡμέρας]

    <lb n="22"/><choice><corr>ἀργήσῃ</corr><sic>αργησει</sic></choice>, ἐπὶ τὰς ἴσα<supplied reason="lost" cert="high">ς παρέξεται αὐτὸν</supplied>

    <lb n="23"/>ὁ πατὴρ παραμένο<unclear reason="undefined" cert="high">ν</unclear><supplied reason="lost" cert="high">τα τῷ </supplied><app type="alternative"><lem><supplied reason="lost" cert="high">Παποντῶτι</supplied></lem><rdg><supplied reason="lost" cert="high">διδασκάλῳ</supplied></rdg></app>

    <lb n="24"/>μετὰ τὸν χρόνο<unclear reason="undefined" cert="high">ν</unclear> <supplied reason="lost" cert="high">ἢ ἀποτεισάτω αὐτῷ ἑκάστης</supplied>

    <lb n="25"/>ἡμέρας ἀργυρίου <unclear reason="undefined" cert="high">δ</unclear>[ραχμὴν <note lang="en" anchored="yes" place="not specified">?</note> μίαν <note lang="en" anchored="yes" place="not specified">?</note>, τοῦ]

    <lb n="26"/>δὲ ἀποσπασθῆναι [<app type="alternative"><lem>ἐντὸς</lem><rdg>πρὸ</rdg></app> τοῦ χρόνου ἐπί-]

    <lb n="27"/>τιμον δ<unclear reason="undefined" cert="high">ραχμ</unclear>ὰ<unclear reason="undefined" cert="high">ς</unclear> ἑ[κατὸν <num value="100"/> καὶ εἰς τὸ δη]-

