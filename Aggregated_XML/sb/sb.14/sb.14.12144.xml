    <lb n="1"/><supplied cert="high" reason="lost">ἐντυχὼν πολλοῖ</supplied>ς ο<unclear cert="high" reason="undefined">ἰ</unclear><supplied cert="high" reason="lost">ηθ</supplied><unclear cert="high" reason="undefined">ε</unclear>ῖσιν μαντείας τρόποις ἐξαπατᾶσ<unclear cert="high" reason="undefined">θ</unclear><supplied cert="high" reason="lost">αι</supplied> 

    <lb n="2"/><supplied cert="high" reason="lost">ε</supplied><unclear cert="high" reason="undefined">ὐθ</unclear><supplied cert="high" reason="lost">έως ἀναγκ</supplied><unclear cert="high" reason="undefined">αῖ</unclear><supplied cert="high" reason="lost">ον ἡγη</supplied>σάμην περὶ τοῦ μηδένα κίνδυν<unclear cert="high" reason="undefined">ο</unclear><supplied cert="high" reason="lost">ν</supplied> 

    <lb n="3"/>τῇ ἀ<supplied cert="high" reason="lost">νο</supplied><unclear cert="high" reason="undefined">ί</unclear>ᾳ <unclear cert="high" reason="undefined">α</unclear>ὐ<supplied cert="high" reason="lost">τ</supplied>ῶν <choice><corr>ἐπακολουθῆσαι</corr><sic>επακολουθηση</sic></choice> σαφῶς πᾶσιν ἐνταῦθ<unclear cert="high" reason="undefined">α</unclear> 

    <lb n="4"/>διαγ<supplied cert="high" reason="lost">ορ</supplied><unclear cert="high" reason="undefined">ε</unclear>ῦσαι ε<unclear cert="high" reason="undefined">ἴρ</unclear><supplied cert="high" reason="lost">γεσ</supplied><unclear cert="high" reason="undefined">θ</unclear><supplied cert="high" reason="lost">α</supplied><unclear cert="high" reason="undefined">ι</unclear> τῆς ἐπισφαλοῦς ταύτης περιεργίας. 

    <lb n="5"/>μήτ᾽ οὖν διὰ χρ<unclear cert="high" reason="undefined">η</unclear><supplied cert="high" reason="lost">σμῶ</supplied>ν ἤτοι ἐνγράφων διὰ γραφῶν ὡς 

    <lb n="6"/>ἐπὶ τοῦ θείου διδομένων μήτε διὰ κωμασίας <choice><corr>ἀγαλμάτων</corr><sic>ακαλματω<supplied cert="high" reason="lost">ν</supplied></sic></choice> 

    <lb n="7"/>ἢ τοιαύτης <choice><corr>μαγγανίας</corr><sic>παγγανιας</sic></choice> τ<unclear cert="high" reason="undefined">ὰ</unclear> ὑπὲρ ἄνθρωπόν τις εἰδένα<supplied cert="high" reason="lost">ι</supplied> 

    <lb n="8"/>προσποιείσθω καὶ τὴν τῶν μελλόντων <choice><corr>ἀδηλίαν</corr><sic>ατηλειαν</sic></choice> ἐπαγγ<unclear cert="high" reason="undefined">ε</unclear><supplied cert="high" reason="lost">λ</supplied>-

    <lb n="9"/>λέσθω <choice><corr>μήτε</corr><sic>μετε</sic></choice> <choice><corr>τοῖς</corr><sic>τους</sic></choice> περὶ <unclear cert="high" reason="undefined">τ</unclear><supplied cert="high" reason="lost">ού</supplied><unclear cert="high" reason="undefined">τ</unclear>ου <choice><corr>πυνθανομένοις</corr><sic>πυνθανομενους</sic></choice> ἑαυτὸν 


    <lb n="10"/>ἐπιδιδότω ἢ ὅλως ἀπ<supplied cert="high" reason="lost">ο</supplied>κριν<unclear cert="high" reason="undefined">έσθ</unclear>ω. ἐὰν δέ τις <choice><corr>τῇ</corr><sic>την</sic></choice> <choice><corr>ἐπαγγελίᾳ</corr><sic>επαγγελιαν</sic></choice> 

    <lb n="11"/><choice><corr>ταύτῃ</corr><sic>ταυτην</sic></choice> παρα<unclear cert="high" reason="undefined">μέν</unclear>ων <supplied cert="high" reason="lost">φ</supplied><unclear cert="high" reason="undefined">ω</unclear>ραθῇ, <choice><corr>πεπείσθω</corr><sic>πεπισθω</sic></choice> ὅτι τῇ ἐσχά<supplied cert="high" reason="lost">τ</supplied>ῃ 

    <lb n="12"/><choice><corr>τιμωρίᾳ</corr><sic>τιμωριαν</sic></choice> παραδοθήσεται. τῆς ἐ<supplied cert="high" reason="lost">π</supplied>ιστολῆς ταύτης τὸ ἀντίγρα-

    <lb n="13"/>φον δημοσίᾳ ἔν τε ταῖς μητροπ<supplied cert="high" reason="lost">ό</supplied><unclear cert="high" reason="undefined">λ</unclear>εσιν καὶ κατὰ κώμην 

    <lb n="14"/>φανεροῖς καὶ εὐαναγνώστοις τοῖς γράμμασιν ἕκαστος 

    <lb n="15"/>ὑμῶν <supplied cert="high" reason="lost">εἰς λε</supplied><unclear cert="high" reason="undefined">ύ</unclear>κωμ<supplied cert="high" reason="lost">α</supplied> <choice><corr>προθεῖ<supplied cert="high" reason="lost">ν</supplied>αι</corr><sic>προθι<supplied cert="high" reason="lost">ν</supplied>αι</sic></choice> <choice><corr>προνοησάτω</corr><sic>προνοησατο</sic></choice>, καὶ διὰ παν-

    <lb n="16"/>τὸς <choice><corr>πολυπραγμονείτω</corr><sic>πολυπραγ<unclear cert="high" reason="undefined">μο</unclear>νιτ<unclear cert="high" reason="undefined">ω</unclear></sic></choice> <supplied cert="high" reason="omitted">καὶ</supplied> <unclear cert="high" reason="undefined">ἐ</unclear>άν τι<supplied cert="high" reason="lost">ν</supplied>α παρὰ τὰ ἀπηγορευμένα 

    <lb n="17"/><choice><corr>πράσσον<supplied cert="high" reason="omitted">τα</supplied></corr><sic>πρασσον</sic></choice> <choice><corr>εὕρῃ</corr><sic>ευρον</sic></choice>, δεδε<unclear cert="high" reason="undefined">μ</unclear><supplied cert="high" reason="lost">έ</supplied><unclear cert="high" reason="undefined">νο</unclear>ν ἐπὶ τὴν ἐμὴν διάγνωσιν 

    <lb n="18"/>πεμψάτω· οὐδὲ γὰρ <supplied cert="high" reason="lost">ὑμῖν</supplied> <unclear cert="high" reason="undefined">ἀ</unclear>κίνδυνον <choice><corr>ἔσται</corr><sic>εσ<gap extent="1" reason="illegible" unit="character"/>ται</sic></choice>, εἰ μάθοι 

    <lb n="19"/>αὖ <choice><corr>τοιούτων</corr><sic>τοιουτον</sic></choice> <choice><corr>τινῶν</corr><sic>τινον</sic></choice> ἐν <supplied cert="high" reason="lost">τοῖς ὑ</supplied>φ᾽ ὑμᾶς νομοῖς <choice><corr>περιορωμένων</corr><sic>περιορομενον</sic></choice> 

    <lb n="20"/>ἀλλὰ τὴν ἴσην κόλασι<supplied cert="high" reason="lost">ν τοῖ</supplied><unclear cert="high" reason="undefined">ς</unclear> σκεπομένοις <choice><corr>ὑποστήσεσθε</corr><sic>υποστησεσθαι</sic></choice>. 

    <lb n="21"/><choice><corr>ἐκείνων</corr><sic>εκεινον</sic></choice> μὲν γὰρ ἕκα<supplied cert="high" reason="lost">στος</supplied>, εἰ καὶ τὰ παρὰ <supplied cert="high" reason="omitted">τὰ</supplied> <choice><corr>ἀπειρημένα</corr><sic><unclear cert="high" reason="undefined">απ</unclear>ιρημενα</sic></choice> τολμ<supplied cert="high" reason="lost">ᾷ</supplied>, 

    <lb n="22"/>εἷς γέ ἐστιν, ὁ δὲ μὴ παντ<supplied cert="high" reason="lost">αχό</supplied>θεν αὐτοὺς <choice><corr>ἐπ<supplied cert="high" reason="lost">ι</supplied>σχὼν</corr><sic>επ<unclear cert="high" reason="undefined">ε</unclear><supplied cert="high" reason="lost">ι</supplied><unclear cert="high" reason="undefined">σ</unclear>χων</sic></choice> πολλοῖ<supplied cert="high" reason="lost">ς</supplied> 

    <lb n="23"/>κινδύνου αὐτὸς αἴτιο<supplied cert="high" reason="lost">ς γεγ</supplied>ένηται. 

    <lb n="24"/><space dim="horizontal" extent="unknown" unit="character"/> 

    <lb n="25"/><handShift new="m2"/> <expan><ex cert="high">ἔτους</ex></expan> <num value="7">ζ</num> Αὐτο<unclear cert="high" reason="undefined">κ</unclear><supplied cert="high" reason="lost">ρατόρ</supplied>ων Καισάρων Λου<unclear cert="high" reason="undefined">κ</unclear><supplied cert="high" reason="lost">ίου Σεπτιμίου</supplied> Σεουήρου Εὐσεβ<supplied cert="high" reason="lost">οῦς Περτίνακος Ἀραβικοῦ Ἀδιαβηνικοῦ Παρθικοῦ</supplied> 

    <lb n="26"/>μεγί<supplied cert="high" reason="lost">στου καὶ Μάρκου Αὐρηλίου</supplied> Ἀντωνίνου Σεβαστ<unclear cert="high" reason="undefined">ῶ</unclear><supplied cert="high" reason="lost">ν </supplied><gap extent="5" reason="lost" unit="character"/><gap extent="3" reason="illegible" unit="character"/><gap extent="unknown" reason="lost" unit="character"/> </ab></div><div n="meta.18193" part="N" type="description"><p><rs cert="high" type="material">Papyrus</rs></p></div><div n="meta.18193" part="N" subtype="textDate" type="commentary"><p><date notAfter="0199" notBefore="0198" type="textDate">198 - 199</date></p></div><div n="meta.18193" part="N" subtype="principalEdition" type="bibliography"><listBibl><bibl subtype="principal" type="publication"><title level="s" type="abbreviated">SB</title><biblScope type="volume">14</biblScope><biblScope type="numbers">12144</biblScope></bibl><bibl type="Trismegistos"><biblScope type="numbers">18193</biblScope></bibl><bibl type="DDbDP"><series>0239</series>; <biblScope type="volume">14</biblScope>; <biblScope type="numbers">12144</biblScope></bibl></listBibl><p>Perseus links: <xref evaluate="all" from="ROOT" href="0239;14;12144" targOrder="Y" to="DITTO" type="Perseus">Text in Perseus</xref></p></div><div n="meta.18193" part="N" subtype="corrections" type="bibliography"><head>BL-Einträge nach BL-Konkordanz</head><bibl type="BL"><biblScope type="volume">VIII</biblScope>, S. <biblScope type="pages">379</biblScope></bibl></div><div n="meta.18193" part="N" subtype="illustrations" type="bibliography"><p><bibl type="illustration">P.Coll.Youtie I, Plate XII</bibl></p></div><div n="meta.18193" part="N" subtype="otherPublications" type="bibliography"><head>Andere Publikation</head><bibl subtype="other" type="publication">P.Coll.Youtie I 30</bibl></div><div n="meta.18193" part="N" subtype="translations" type="bibliography"><head>Übersetzungen</head><listBibl lang="en"><head lang="de">Englisch:</head><bibl type="translations">J. Rea, ZPE