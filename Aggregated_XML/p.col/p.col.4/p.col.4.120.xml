    <lb n="1"/>β<unclear cert="high" reason="undefined">ασιλέως</unclear> <unclear cert="high" reason="undefined">π</unclear>ροστά<unclear cert="high" reason="undefined">ξ</unclear>αν<unclear cert="high" reason="undefined">τος</unclear> <supplied cert="high" reason="lost">τοῖς ἐνδημοῦσιν ἢ τοῖς λι</supplied>-

    <lb n="2"/><unclear cert="low" reason="undefined">π</unclear>οῦσιν τὰς αὐτῶν οὐσία<unclear cert="high" reason="undefined">ς</unclear> <supplied cert="high" reason="lost">τὰς πρὸς Ἀλεξανδρεί</supplied>-

    <lb n="3"/>αι καὶ κατ᾽ Αἴγυπτον κα<supplied cert="low" reason="lost">ὶ ταῖς τῶν ἐν στρατείαι</supplied> 

    <lb n="4"/>ἢ στρατευομένων πά<unclear cert="high" reason="undefined">ν</unclear><supplied cert="high" reason="lost">των γυναιξὶν ἢ τοῖς γο</supplied>-

    <lb n="5"/>νεῦσιν ἢ ἀδελφοῖς ἢ ἀδε<unclear cert="high" reason="undefined">λ</unclear><supplied cert="high" reason="lost">φαῖς ἢ υἱοῖς ἢ θυγατρά</supplied>-

    <lb n="6"/>σιν. ἀπογράφεσ<unclear cert="high" reason="undefined">θαι</unclear> πάν<supplied cert="high" reason="lost">τας τὰς οὐσίας, ἐν Ἀλεξαν</supplied>-

    <lb n="7"/>δρείαι μὲν πρὸς τ<supplied cert="high" reason="lost">ο</supplied>ὺς ἱερέ<supplied cert="high" reason="lost">ας τοὺς περὶ τὴν πόλιν</supplied> 

    <lb n="8"/>τὴν δωρεὰν <unclear cert="high" reason="undefined">ἔ</unclear>χοντας ἐ<supplied cert="high" reason="lost">ν ἡμέραις </supplied><gap extent="unknown" reason="lost" unit="character"/><supplied cert="high" reason="lost"><foreign lang="la">,</foreign> ἐν</supplied> 

    <lb n="9"/>δὲ ταῖς λοιπαῖς πόλεσι<unclear cert="high" reason="undefined">ν</unclear> <supplied cert="high" reason="lost">καὶ ἐν ταῖς κώμαις πρός</supplied> 

    <lb n="10"/>τε τοὺς στρατηγοὺς τ<unclear cert="high" reason="undefined">ο</unclear><supplied cert="high" reason="lost">ὺς ἐν τοῖς νομοῖς ὑπὸ τοῦ</supplied> 

    <lb n="11"/>βασιλέως καθεσταμέν<supplied cert="high" reason="lost">ους ἢ τοὺς τούτων ὑπηρέ</supplied>-

    <lb n="12"/>τας καὶ τὸν πραγματευ<supplied cert="high" reason="lost">όμενον </supplied><gap extent="unknown" reason="lost" unit="character"/> 

    <lb n="13"/>τῶν τὴν δωρεὰν ἐχόντ<supplied cert="high" reason="lost">ων ἐν τῶι ὡρισμένωι χρό</supplied>-

    <lb n="14"/>νωι, τιμᾶσθαι δὲ ἑκαστα<gap extent="unknown" reason="lost" unit="character"/> 

    <lb n="15"/>ἐκ τοῦ διαγράμματος, τα<gap extent="unknown" reason="lost" unit="character"/><supplied cert="high" reason="lost"> ἐν ἑκάστωι ἐνι</supplied>-

    <lb n="16"/>αυτῶι, ὅσου ἄξιά ἐσ<unclear cert="high" reason="undefined">τι</unclear><supplied cert="high" reason="lost">ν τὰ προσφορὰ καὶ τάξασθαι</supplied> 

    <lb n="17"/>τοῖς τὴν δωρεὰν ἔχουσι<unclear cert="high" reason="undefined">ν</unclear> <supplied cert="high" reason="lost">κατὰ ταύτην τὴν ἀξίαν</supplied> 

    <lb n="18"/>ἀπὸ τῆς μνᾶς <expan><ex cert="high">δραχμὰς</ex></expan> <num value="2">β</num>. ἐὰν <unclear cert="high" reason="undefined">δ</unclear><supplied cert="high" reason="lost">ὲ μὴ τὰς αὐτῶν οὐσίας ἀπο</supplied>-

    <lb n="19"/>γράψ<unclear cert="high" reason="undefined">ω</unclear>νται ἐν τῶι γε<unclear cert="high" reason="undefined">γ</unclear><supplied cert="high" reason="lost">ραμμένωι χρόνωι, τοὺς μὲν</supplied> 

    <lb n="20"/>ἐνδημοῦντας <unclear cert="high" reason="undefined">ἐν</unclear> <unclear cert="high" reason="undefined">ἡμ</unclear><supplied cert="high" reason="lost">έραις </supplied><gap extent="8" reason="lost" unit="character"/><supplied cert="high" reason="lost"> μετὰ τὴν</supplied> 

    <lb n="21"/>συντεταγμένην ἡ<unclear cert="high" reason="undefined">μ</unclear><supplied cert="high" reason="lost">έραν πράξασθαι διπλοῦν καὶ</supplied> 

    <lb n="22"/>τῆς ἀξίας ἀκύρους αὐ<unclear cert="high" reason="undefined">τ</unclear><supplied cert="high" reason="lost">οῖς εἶναι τὰς ἀπογραφάς,</supplied> 

    <lb n="23"/>τοὺς δὲ ἀποδημοῦντ<supplied cert="high" reason="lost">ας τοὺς τῶν στρατευομένων ἁ</supplied>-

    <lb n="24"/>π<unclear cert="low" reason="undefined">λοῦν</unclear> <unclear cert="high" reason="undefined">τὴν</unclear> <unclear cert="high" reason="undefined">τι</unclear>μὴ<unclear cert="high" reason="undefined">ν</unclear> <unclear cert="high" reason="undefined">τάξ</unclear><supplied cert="high" reason="lost">ασθαι ὡς τάχιστα μετὰ τὴν</supplied> 

    <lb n="25"/>γεγ<unclear cert="high" reason="undefined">ρα</unclear><supplied cert="high" reason="lost">μμ</supplied><unclear cert="high" reason="undefined">έ</unclear><supplied cert="high" reason="lost">ν</supplied>η<unclear cert="high" reason="undefined">ν</unclear> <supplied cert="high" reason="lost">ἡμέραν </supplied><gap extent="unknown" reason="lost" unit="character"/><supplied cert="high" reason="lost"> καὶ ἀπο</supplied>-

    <lb n="26"/>γραψ<gap extent="1" reason="illegible" unit="character"/><gap extent="2" reason="lost" unit="character"/>με<unclear cert="high" reason="undefined">ν</unclear><gap extent="2" reason="illegible" unit="character"/><unclear cert="high" reason="undefined">ρ</unclear><gap extent="1" reason="illegible" unit="character"/><gap extent="unknown" reason="lost" unit="character"/> 

    <lb n="27"/>κυρ<unclear cert="high" reason="undefined">ί</unclear><supplied cert="high" reason="lost">α</supplied>ς αὐτοῖς ε<unclear cert="high" reason="undefined">ἶ</unclear><supplied cert="high" reason="lost">ναι τὰς ἀπογραφάς. </supplied><gap extent="unknown" reason="lost" unit="character"/> 

