    <lb n="1"/>Ἡερκλείδης Διοσκουρίδει χαίρειν. εἰ ἔρρωσαι <unclear cert="high" reason="undefined">σ</unclear>ύ τε καὶ τὰ τέκνα σου καὶ οἱ παρὰ σοῦ <choice><corr>πάντες</corr><sic>παντας</sic></choice> τἆλλ᾽ ἐστί σοι <choice><corr>ἅπαντα</corr><sic>απανται</sic></choice>

    <lb n="2"/>κατὰ τρ<unclear cert="high" reason="undefined">όπ</unclear>ον, εἴη ἄν ὡς βούλομαι, <unclear cert="high" reason="undefined">κ</unclear>ἀ<unclear cert="high" reason="undefined">γὼ</unclear> δὲ ὑγίαινον. <unclear cert="high" reason="undefined">τ</unclear><supplied cert="high" reason="lost">ῇ</supplied> <num value="16">ι<unclear cert="high" reason="undefined">ϛ</unclear></num> <unclear cert="high" reason="undefined">το</unclear>ῦ <unclear cert="high" reason="undefined">ὑπ</unclear><supplied cert="high" reason="lost">ο</supplied><unclear cert="high" reason="undefined">κ</unclear>ει<unclear cert="high" reason="undefined">μέν</unclear><supplied cert="high" reason="lost">ο</supplied><unclear cert="high" reason="undefined">υ</unclear> <supplied cert="high" reason="lost">μ</supplied>ηνὸς συνπεσόντος μου Φιλώται

    <lb n="3"/>τῶι ἀποδιδόντι σο<unclear cert="high" reason="undefined">ι</unclear> τ<supplied cert="high" reason="lost">ὴ</supplied>ν ἐπιστολὴ<unclear cert="high" reason="undefined">ν</unclear> ἐν τῶι <choice><corr>Δημητρείωι</corr><sic>δημη<unclear cert="high" reason="undefined">τρ</unclear><supplied cert="high" reason="lost">ι</supplied><unclear cert="high" reason="undefined">ω</unclear>ι</sic></choice> β<unclear cert="high" reason="undefined">ο</unclear>υλομέν<unclear cert="high" reason="undefined">ω</unclear>ι ἐπιδ<unclear cert="high" reason="undefined">οῦν</unclear>αι κατὰ σοῦ ὅσα σοι συνιστόρηκεν ἐν τῶι

    <lb n="4"/>πα<unclear cert="high" reason="undefined">ν</unclear>τὶ βίωι τῶι βασιλε<supplied cert="high" reason="lost">ῖ</supplied> καὶ ἐμπλεκ<unclear cert="high" reason="undefined">ε</unclear>ὶς αὐτῶι μεθ᾽ ἑτ<unclear cert="high" reason="undefined">έ</unclear>ρω<unclear cert="high" reason="undefined">ν</unclear> κατ<unclear cert="high" reason="undefined">ηξί</unclear>ωσ<unclear cert="high" reason="undefined">α</unclear> μὲν <unclear cert="high" reason="undefined">κα</unclear><supplied cert="high" reason="lost">ὶ</supplied> <unclear cert="high" reason="undefined">ἀ</unclear>νεδεξάμην αὐτὸν ἕκαστα τοῦ μὴ

    <lb n="5"/>ἀδικηθῆναι ἀυτὸν, ἀλ<unclear cert="high" reason="undefined">λ</unclear>ὰ πᾶν τὸ δέον αὐτῶι ἔσται. <choice><corr>οὕτω</corr><sic>ουτωι</sic></choice> <unclear cert="high" reason="undefined">συν</unclear>ε<unclear cert="high" reason="undefined">πεί</unclear>σ<supplied cert="high" reason="lost">θ</supplied><unclear cert="high" reason="undefined">η</unclear> καὶ <unclear cert="high" reason="undefined">μετὰ</unclear> <unclear cert="high" reason="undefined">πολ</unclear><supplied cert="high" reason="lost">λ</supplied>οῦ ἱδρῶτος ἀπεσπάσαμεν· ὅθεν καὶ

    <lb n="6"/><unclear cert="high" reason="undefined">π</unclear>ρο<unclear cert="high" reason="undefined">η</unclear>νέγκα<unclear cert="high" reason="undefined">τ</unclear>ο <unclear cert="high" reason="undefined">ἠδ</unclear><supplied cert="high" reason="lost">ι</supplied>κ<unclear cert="high" reason="undefined">ῆσθα</unclear>ι ὑπὸ σοῦ πολλά τι<unclear cert="high" reason="undefined">ν</unclear>α <unclear cert="high" reason="undefined">κ</unclear>αὶ <unclear cert="high" reason="undefined">ἀποστ</unclear><supplied cert="high" reason="lost">ε</supplied><unclear cert="high" reason="undefined">ρε</unclear><supplied cert="high" reason="lost">ῖ</supplied><unclear cert="high" reason="undefined">σ</unclear>θαί τινων <unclear cert="high" reason="undefined">φ</unclear>ι<unclear cert="high" reason="undefined">λ</unclear>αν<unclear cert="high" reason="undefined">θρώ</unclear>πων ὧν ἑστάκεις αὐτῶι καὶ <choice><corr>πλεονάκις</corr><sic>πλειονα<unclear cert="high" reason="undefined">κι</unclear><supplied cert="high" reason="lost">ς</supplied></sic></choice>

    <lb n="7"/><unclear cert="high" reason="undefined">π</unclear>ρ<unclear cert="high" reason="undefined">οσ</unclear>απεσταλ<unclear cert="high" reason="undefined">κέναι</unclear> σ<unclear cert="high" reason="undefined">οι</unclear> μηδὲ κατ᾽ ἀν<unclear cert="high" reason="undefined">θ</unclear>ρώπο<unclear cert="high" reason="undefined">υ</unclear> αὐτοῦ σχεῖ<supplied cert="high" reason="lost">ν</supplied>, <unclear cert="high" reason="undefined">ἀλλ</unclear>ὰ ἀπει<unclear cert="high" reason="undefined">λὰς</unclear> <unclear cert="high" reason="undefined">προ</unclear>σα<unclear cert="high" reason="undefined">π</unclear><supplied cert="high" reason="lost">έστ</supplied>ελλες· διὸ καὶ εἰς τοῦτο <choice><corr>προήχθη</corr><sic>προηχθηι</sic></choice> τ<unclear cert="high" reason="undefined">οῦ</unclear>

    <lb n="8"/>κα<unclear cert="high" reason="undefined">τ</unclear>ὰ <unclear cert="high" reason="undefined">σ</unclear>ο<unclear cert="high" reason="undefined">ῦ</unclear> <unclear cert="high" reason="undefined">γ</unclear>ενέσθαι. ἐγ<unclear cert="high" reason="undefined">ὼ</unclear> οὖν <unclear cert="high" reason="undefined">τ</unclear>εθα<unclear cert="high" reason="undefined">ύ</unclear>μακα, ε<unclear cert="high" reason="undefined">ι</unclear>᾿ σὺ συν<unclear cert="high" reason="undefined">αυ</unclear>ψ<unclear cert="high" reason="undefined">ω</unclear><gap extent="1" reason="lost" unit="character"/><gap extent="1" reason="illegible" unit="character"/>αντων κα<gap extent="5" reason="illegible" unit="character"/>ς <unclear cert="high" reason="undefined">τ</unclear><supplied cert="high" reason="lost">ὸν</supplied> ἐνεστῶτα καιρὸν <choice><corr>εἴασας</corr><sic>ηασας</sic></choice> αὐτὸν κατα-

    <lb n="9"/>π<unclear cert="high" reason="undefined">λ</unclear>εῦσαι ου<unclear cert="high" reason="undefined">λ</unclear>υ<unclear cert="high" reason="undefined">σασ</unclear>τα<unclear cert="high" reason="undefined">π</unclear><gap extent="3" reason="illegible" unit="character"/><unclear cert="high" reason="undefined">σεκ</unclear><gap extent="1" reason="illegible" unit="character"/>αυ<unclear cert="high" reason="undefined">η</unclear><gap extent="1" reason="illegible" unit="character"/><unclear cert="high" reason="undefined">ρ</unclear><gap extent="1" reason="lost" unit="character"/>ον<unclear cert="high" reason="undefined">τ</unclear><gap extent="1" reason="illegible" unit="character"/><gap extent="1" reason="lost" unit="character"/><unclear cert="high" reason="undefined">οι</unclear><gap extent="1" reason="illegible" unit="character"/>ιλοι και <unclear cert="high" reason="undefined">μ</unclear><gap extent="1" reason="illegible" unit="character"/><gap extent="3" reason="lost" unit="character"/><gap extent="1" reason="illegible" unit="character"/><unclear cert="high" reason="undefined">α</unclear><gap extent="3" reason="illegible" unit="character"/><unclear cert="high" reason="undefined">θ</unclear>ρ<gap extent="5" reason="illegible" unit="character"/><gap extent="3" reason="lost" unit="character"/><gap extent="1" reason="illegible" unit="character"/>εραν ὅμως ψοῦν καὶ ἀδελφοὶ μάχοντ<supplied cert="high" reason="lost">αι·</supplied>

    <lb n="10"/>ἔτι καὶ νῦν καλῶς ποιήσεις καθότ<unclear cert="high" reason="undefined">ι</unclear> <unclear cert="high" reason="undefined">κ</unclear>αὶ <unclear cert="high" reason="undefined">αναδ</unclear><gap extent="1" reason="illegible" unit="character"/><gap extent="10" reason="lost" unit="character"/><gap extent="1" reason="illegible" unit="character"/><unclear cert="high" reason="undefined">ο</unclear><gap extent="1" reason="illegible" unit="character"/><gap extent="3" reason="lost" unit="character"/><unclear cert="high" reason="undefined">π</unclear><gap extent="3" reason="illegible" unit="character"/><unclear cert="high" reason="undefined">λ</unclear><gap extent="1" reason="lost" unit="character"/><gap extent="1" reason="illegible" unit="character"/><unclear cert="high" reason="undefined">ο</unclear><gap extent="1" reason="illegible" unit="character"/><unclear cert="high" reason="undefined">ει</unclear><gap extent="8" reason="illegible" unit="character"/><unclear cert="high" reason="undefined">τ</unclear>ωι εἰς λόγον μάλιστα μὲν κατὰ μόνας

    <lb n="11"/>καὶ τὰ παρ᾽ αὐτοῦ μεταλαβὼν <unclear cert="high" reason="undefined">ἀ</unclear>ὐτοῦ μεταλαβὼν <unclear cert="high" reason="undefined">ἀ</unclear>ποπε<unclear cert="high" reason="undefined">ισ</unclear>θήτω<gap extent="10" reason="lost" unit="character"/><gap extent="1" reason="illegible" unit="character"/><unclear cert="high" reason="undefined">αν</unclear><gap extent="12" reason="illegible" unit="character"/><gap extent="5" reason="lost" unit="character"/><gap extent="1" reason="illegible" unit="character"/><gap extent="1" reason="lost" unit="character"/> <add place="supralinear">περὶ τῶν αὐτῶν καλὰ ἀλλή<unclear cert="high" reason="undefined">λο</unclear>υς ἀσπά<unclear cert="high" reason="undefined">σα</unclear>σθε</add> νομίσας ὅτι ἐγώ σοι προσελήλυθα

    <lb n="12"/>κα<unclear cert="high" reason="undefined">ὶ</unclear> συ<unclear cert="high" reason="undefined">μβ</unclear>έ<unclear cert="high" reason="undefined">β</unclear>λησαί τί μοι. καὶ γὰρ περὶ τῶν αὐτῶν <unclear cert="high" reason="undefined">ι</unclear><gap extent="8" reason="lost" unit="character"/><gap extent="1" reason="illegible" unit="character"/><unclear cert="high" reason="undefined">η</unclear>φενη<unclear cert="high" reason="undefined">φ</unclear><gap extent="8" reason="illegible" unit="character"/><gap extent="1" reason="lost" unit="character"/><gap extent="2" reason="illegible" unit="character"/><gap extent="2" reason="lost" unit="character"/><gap extent="1" reason="illegible" unit="character"/><unclear cert="high" reason="undefined">σ</unclear>οι. ἐν δὲ τοῖς μάλιστα χαριεῖ τοῦ σώματο<supplied cert="high" reason="lost">ς</supplied>

