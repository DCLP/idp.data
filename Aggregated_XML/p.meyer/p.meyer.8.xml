    <lb n="1"/>Λουκίωι Τρεβίωι Πρόκλω<unclear reason="undefined" cert="high">ι</unclear> τῶι κρατίστωι ἐ<unclear reason="undefined" cert="high">π</unclear><supplied reason="lost" cert="high">ιστρατήγωι</supplied> 

    <lb n="2"/>παρὰ Φιλίππου καὶ Χαριτίου ἀμφοτέρ<unclear reason="undefined" cert="high">ω</unclear>ν Ἀφροδισίου τοῦ Φ<unclear reason="undefined" cert="high">ι</unclear><supplied reason="lost" cert="high">λίππου κατοίκου</supplied> 

    <lb n="3"/>τῶν ἐν τῷ Ἀρσινο<hi rend="diaeresis">ΐ</hi>τῃ ἀνδρῶν Ἑλλήνων <num value="6475">Ϛυοε</num>, τῆς δὲ Χαριτίου μετὰ <supplied reason="lost" cert="high">κυρίου ἐμοῦ τοῦ</supplied> 

    <lb n="4"/>Φιλίππου. ἡ ἀμφοτέρων μήτηρ Διδυμάριον ἐτελεύτησεν ἔτι ἀπὸ <gap reason="lost" extent="8" unit="character"/><supplied reason="lost" cert="high"> ἔτους</supplied> 

    <lb n="5"/>θεοῦ Ἁδριανοῦ ἐπὶ κληρο<unclear reason="undefined" cert="high">νό</unclear>μοις <choice><corr>ἡμῖν</corr><sic>ημειν</sic></choice> τότε ἀφήλιξι, κατὰ <unclear reason="undefined" cert="high">δ</unclear>ὲ <supplied reason="lost" cert="high">τοὺς νόμους ἐλάχομεν</supplied> 

    <lb n="6"/>τὰ ὑπάρχοντα καὶ οἰκ<unclear reason="undefined" cert="high">ό</unclear>πεδα καὶ δουλικὰ σώματα τέσσερα <num value="4"/> κ<unclear reason="undefined" cert="high">αὶ</unclear> <unclear reason="undefined" cert="high">τ</unclear><supplied reason="lost" cert="high">ὰ τούτων ἔγγο</supplied>-

    <lb n="7"/>να καὶ ἀπόθετα <app type="BL"><lem resp="1.308"><seg cert="low" part="N">ἅ<unclear reason="undefined" cert="low">πα</unclear><supplied reason="lost" cert="low">ντ</supplied><unclear reason="undefined" cert="low">α</unclear></seg></lem><rdg>α<gap reason="illegible" extent="2" unit="character"/><gap reason="lost" extent="2" unit="character"/></rdg></app>. ὁ δὲ προγεγραμμένος ἡ<unclear reason="undefined" cert="high">μ</unclear>ῶ<supplied reason="lost" cert="high">ν πατὴρ Ἀφροδί</supplied>-

    <lb n="8"/>σιο<unclear reason="undefined" cert="high">ς</unclear> πάντων <app type="BL"><lem resp="1.308">ἀντεφαπτ<supplied reason="lost" cert="high">όμενος</supplied></lem><rdg>ἀν<unclear reason="undefined" cert="high">τ</unclear>εφ<gap reason="illegible" extent="3" unit="character"/><gap reason="lost" extent="3" unit="character"/></rdg></app>, ὕστερον, <choice><corr>ἐπεὶ</corr><sic>επι</sic></choice> σ<unclear reason="undefined" cert="high">υ</unclear>νῆλθεν Σαρα<supplied reason="lost" cert="high">πιάδι τῇ καὶ Ἀ</supplied>-

    <lb n="9"/>θηναρίῳ, καὶ ὡς <gap reason="lost" extent="3" unit="character"/>κη α<gap reason="illegible" extent="1" unit="character"/><gap reason="lost" extent="3" unit="character"/><supplied reason="lost" cert="high"> π</supplied>άντων ἐγένετο ἀλόγως ἀξιῶ<supplied reason="lost" cert="high">ν </supplied><gap reason="lost" extent="13" unit="character"/> 

    <lb n="10"/>τῶν ἰδίων μηδὲν ἅ<supplied reason="lost" cert="high">μα τε</supplied> καταφρονῶν τῆς περὶ ἡμ<unclear reason="undefined" cert="high">ᾶς</unclear> <unclear reason="undefined" cert="high">ἀβ</unclear><supplied reason="lost" cert="low">οηθήτου ἀσθενείας .</supplied>

    <lb n="11"/>ἔκτοτε οὖν μέχρι το<unclear reason="undefined" cert="high">ῦ</unclear> <unclear reason="undefined" cert="high">ν</unclear><supplied reason="lost" cert="high">ῦν</supplied> πάντων ἀντιλαμβανομένου κ<unclear reason="undefined" cert="high">αὶ</unclear> <supplied reason="lost" cert="high">ἀντιποιουμέ</supplied>-

    <lb n="12"/>νου καὶ τῶν σωμάτων <unclear reason="undefined" cert="high">τ</unclear>ὰς ἀποφορὰς <choice><corr>ἐκλεγομένου</corr><sic>εγλεγομενου</sic></choice>, πάντ<unclear reason="undefined" cert="high">α</unclear> <supplied reason="lost" cert="high">καταγραφῆναι</supplied> 

    <lb n="13"/>συνέταξεν εἰς τὸ τῆς γυναικὸς αὐτοῦ ὄν<unclear reason="undefined" cert="high">ο</unclear>μα, καίτοι τοῦ πατρὸ<supplied reason="lost" cert="high">ς ἡμῶν σιτοπαρα</supplied>-

    <lb n="14"/>λήμπτου γενομένου καὶ εἰς ἄπορον <choice><corr>τραπ<supplied reason="lost" cert="high">έ</supplied>ντος</corr><sic>τραπ<supplied reason="lost" cert="high">ε</supplied>ντων</sic></choice>. αὐτοί τε οὖν <gap reason="illegible" extent="1" unit="character"/><gap reason="lost" extent="11" unit="character"/><supplied reason="lost" cert="high"> γε</supplied>-

    <lb n="15"/>νάμενοι διὰ τὸ καὶ ἐμὲ τὸν Φίλιππον ἐν δημοσίαις χρεία<supplied reason="omitted" cert="high">ι</supplied>ς γεγον<supplied reason="lost" cert="high">έναι καὶ ἀναγ</supplied>-

    <lb n="16"/>καίως τὴν ἐπὶ σὲ τὸν εὐεργέτην καταφυγὴν ποιούμενο<supplied reason="lost" cert="high">ι ἀξιοῦμεν</supplied> 

    <lb n="17"/>τὰ <hi rend="diaeresis">ἴ</hi>δια <choice><corr>ἡμῖν</corr><sic>ημειν</sic></choice> ἀποκατασταθῆναι σὺν ταῖς τοῦ παντὸς χρ<supplied reason="lost" cert="high">ήσεσιν, ἔτι δὲ</supplied> 

    <lb n="18"/>καὶ τῶν σωμάτων <supplied reason="omitted" cert="high">τῇ</supplied> ἐπιγονῇ, <supplied reason="omitted" cert="high">ἵνα</supplied> καὶ ὦμεν ὑπὸ σ<unclear reason="undefined" cert="high">ο</unclear><supplied reason="lost" cert="high">ῦ</supplied> βεβοηθημένοι. <supplied reason="lost" cert="high">διευτύχει</supplied>. 

