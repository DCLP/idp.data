    <lb n="1"/>Θέων Χαιρήμονι τῷ <expan>ἀδε<supplied reason="lost" cert="high">λ</supplied>φ<ex cert="high">ῷ</ex></expan> 

    <lb n="2"/>πλεῖστα χαίρειν.  πρὸ μὲν πάν-

    <lb n="3"/>των εὐχομαί <choice><corr>σε</corr><sic>σαι</sic></choice> <hi rend="diaeresis">ὑ</hi>γιαίνειν καὶ τὸ 

    <lb n="4"/>προσκύνημά σ<supplied reason="lost" cert="high">ο</supplied>υ ποιῶ καθ᾽ ἑκά-

    <lb n="5"/><supplied reason="lost" cert="high">σ</supplied><unclear reason="undefined" cert="high">τ</unclear>ην ἡμέραν παρὰ τῷ κυρίῳ Σα-

    <lb n="6"/><choice><corr>ράπιδι</corr><sic>σαραπιζι</sic></choice> εὐχ<supplied reason="lost" cert="high">ό</supplied>μενός σοι τὰ κάλλιστα. 

    <lb n="7"/>κόμισαι παρὰ <choice><corr>το<supplied reason="omitted" cert="high">ῦ</supplied></corr><sic>το</sic></choice> <choice><corr>ἀν<supplied reason="omitted" cert="high">α</supplied>διδόντος</corr><sic>ανδιδοντος</sic></choice> σοι 

    <lb n="8"/>τὸ ἐπιστόλιν Θέω<supplied reason="lost" cert="high">ν</supplied>ος <unclear reason="undefined" cert="high">τοῦ</unclear> <hi rend="diaeresis"><unclear reason="undefined" cert="high">υ</unclear></hi><unclear reason="undefined" cert="high">ἱ</unclear><supplied reason="lost" cert="high">οῦ</supplied> 

    <lb n="9"/>Κάρπου πέ<supplied reason="lost" cert="high">λ</supplied>ματα <choice><corr>γυναικεῖα</corr><sic>γυναικια</sic></choice>. 

    <lb n="10"/>ἐκομισάμην παρὰ <choice><corr>Θέωνο<supplied reason="omitted" cert="high">ς</supplied></corr><sic>θεωνο</sic></choice> τοῦ Νε-

    <lb n="11"/><unclear reason="undefined" cert="high">μαρ</unclear>ίτου τ<supplied reason="lost" cert="high">ὸν</supplied> <unclear reason="undefined" cert="high">φ</unclear>ακ<supplied reason="lost" cert="high">ὸ</supplied><unclear reason="undefined" cert="high">ν</unclear> κ<unclear reason="undefined" cert="high">α</unclear>ὶ <supplied reason="lost" cert="high">τὰ</supplied> <gap reason="illegible" extent="3" unit="character"/><gap reason="lost" extent="1" unit="character"/><gap reason="illegible" extent="1" unit="character"/><gap reason="lost" extent="1" unit="character"/> 

    <lb n="12"/>μοι πάντα. σὺν θεοῖ<supplied reason="lost" cert="high">ς δ</supplied>ὲ ἐρχ<supplied reason="lost" cert="high">όμε</supplied>-

    <lb n="13"/>νος <choice><corr>ἐνέ<supplied reason="omitted" cert="high">γ</supplied>κω</corr><sic>ενεκω</sic></choice> τὴν <choice><corr>λώδικα</corr><sic>λωζι<supplied reason="lost" cert="high">κ</supplied>α</sic></choice>.  κα<supplied reason="lost" cert="high">ὶ</supplied> 

    <lb n="14"/>ἐξήτακα Ἁρμόδι<supplied reason="lost" cert="high">ο</supplied>ν κ<supplied reason="lost" cert="high">α</supplied>ὶ οὐδέν 

    <lb n="15"/>μοι εἴρηκε. σὺν θεοῖς δὲ μετὰ 

    <lb n="16"/>τὰ Δημήτρια <choice><corr>εἰσέρχομαι</corr><sic>εισερχομε</sic></choice>· διὸ 

    <lb n="17"/>οὖν καλῶς <choice><corr>ποιήσεις</corr><sic>ποιησις</sic></choice> ἐκτινά-

    <lb n="18"/>ξας τὰ χιτώνια μὴ σαπῇ ἕως 

    <lb n="19"/><subst><add place="inline">εἰσέλθω</add><del rend="corrected" status="unremarkable">εξελθω</del></subst>.  καὶ γράφω <choice><corr>σ<supplied reason="omitted" cert="high">οι</supplied></corr><sic>ς</sic></choice> <hi rend="diaeresis">ἵ</hi>να 


    <lb n="20"/>βοηθήσῃς Πετιρᾶτι καθ᾽ ὃ 

    <lb n="21"/>δύνασαι, <choice><corr>ἐὰν</corr><sic>αιαν</sic></choice> εἰσέλθῃ πρός 

    <lb n="22"/>σε, <choice><corr>ἐπεὶ</corr><sic>επι</sic></choice> κεκράτηται ἕνεκα 

    <lb n="23"/>συλήσεως καὶ φόνου.  <del rend="erasure" status="unremarkable">ας</del> 

    <lb n="24"/>ἄσπασαι Σαραπίωνα καὶ Διοσ-

    <lb n="25"/><subst><add place="inline">κοροῦν</add><del rend="corrected" status="unremarkable">διοσκορον</del></subst> καὶ Ἀχιλέα καὶ τὴν 

    <lb n="26"/>γυναῖκά σου καὶ <choice><corr>τοὺ<supplied reason="omitted" cert="high">ς</supplied></corr><sic>του</sic></choice> <choice><corr>φιλοῦ<supplied reason="omitted" cert="high">ν</supplied>τα<supplied reason="omitted" cert="high">ς</supplied></corr><sic>φιλουτα</sic></choice> 

    <lb n="27"/>ἡμᾶς κατ᾽ ὄνομα.  ἀσπάζε-

    <lb n="28"/>ταί <choice><corr>σε</corr><sic>σαι</sic></choice> ὁ πατήρ μου καὶ Θέων <supplied reason="omitted" cert="high">καὶ</supplied> 

    <lb n="29"/>Κόμοδος καὶ Λάλαχος 

    <lb n="30"/>καὶ <choice><corr>οἱ</corr><sic><hi rend="diaeresis">υ</hi></sic></choice> εἰς τὸ ἐργαστήριο<supplied reason="lost" cert="high">ν</supplied> 

    <lb n="31"/>πάντες.  πολλάκις σοι γρά-

    <lb n="32"/>φω καὶ <choice><corr>σὺ</corr><sic>σοι</sic></choice> <choice><corr>ο<supplied reason="omitted" cert="high">ὐ</supplied>κ</corr><sic>οκ</sic></choice> ἀντέγραψ<supplied reason="lost" cert="high">ας</supplied>. 

    <lb n="33"/><choice><corr>ἔρρωσο</corr><sic>ερρωσω</sic></choice> διὰ παντός. 
