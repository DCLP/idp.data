    <lb n="1"/>τῷ δεσπό<supplied reason="lost" cert="high">τῃ μου καὶ κυ</supplied>ρ<unclear reason="undefined" cert="high">ί</unclear>ῳ τῷ 

    <lb n="2"/>πατρὶ Ἀ<unclear reason="undefined" cert="high">γ</unclear><supplied reason="lost" cert="high">αθῷ Δαίμονι Ἐ</supplied>ρ<unclear reason="undefined" cert="high">μ</unclear><supplied reason="lost" cert="high">α</supplied><unclear reason="undefined" cert="high">π</unclear>όλλων 

