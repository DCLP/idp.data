    <lb n="1"/>Λεωδάμας Λυσιμά-

    <lb n="2"/>χωι χαίρειν.  Δημητρί-

    <lb n="3"/>ου τοῦ τοῦ Παρμενίω-

    <lb n="4"/>νος υἱοῦ σύνταξον το<unclear reason="undefined" cert="high">ὺ</unclear><supplied reason="lost" cert="high">ς</supplied> 

    <lb n="5"/>καρποὺς πάντας συνε-

    <lb n="6"/>χές, ὡσαύτως δὲ καὶ τ<supplied reason="lost" cert="high">ῶ</supplied>ν 

    <lb n="7"/>ἄλλων <unclear reason="undefined" cert="high">τῶν</unclear> <gap reason="lost" extent="1" unit="character"/><unclear reason="undefined" cert="high">τ</unclear><gap reason="lost" extent="1" unit="character"/>εκ<unclear reason="undefined" cert="high">αι</unclear><gap reason="lost" extent="3" unit="character"/><supplied reason="lost" cert="high">, </supplied> 

    <lb n="8"/>συντέτακται <unclear reason="undefined" cert="high">γὰρ</unclear> ἤ<unclear reason="undefined" cert="high">δη</unclear> 

    <lb n="9"/>ἕως τοῦ Πανήμου μηνό<supplied reason="lost" cert="high">ς,</supplied> 

    <lb n="10"/>ὡσαύτως δὲ καὶ τῶν λοι-

    <lb n="11"/>πῶν ἕως τοῦ ἀριθμοῦ, 

    <lb n="12"/><subst><add place="inline">θερίζειν</add><del rend="corrected" status="unremarkable">θερι<gap reason="illegible" extent="1" unit="character"/>ειν</del></subst> δὲ καὶ ἀμᾶν 

    <lb n="13"/>καὶ λεπταγίοις υ<unclear reason="undefined" cert="high">ν</unclear>τ<unclear reason="undefined" cert="high">ας</unclear><gap reason="illegible" extent="2" unit="character"/> 

    <lb n="14"/><gap reason="illegible" extent="1" unit="character"/><gap reason="lost" extent="1" unit="character"/>αν <unclear reason="undefined" cert="high">οἷς</unclear> κ<unclear reason="undefined" cert="high">αθη</unclear>κας.  εἰ δέ

    <lb n="15"/>τις πυρὸς <subst><add place="inline">πα<supplied reason="lost" cert="low"><unclear reason="undefined" cert="high">ρ</unclear></supplied><unclear reason="undefined" cert="high">έσ</unclear><add place="supralinear">τ</add><unclear reason="undefined" cert="high">ηκε</unclear>ν</add><del rend="corrected" status="unremarkable">πα<supplied reason="lost" cert="low"><unclear reason="undefined" cert="high">ρ</unclear></supplied><unclear reason="undefined" cert="high">εσ</unclear><del rend="erasure" status="unremarkable"><unclear reason="undefined" cert="high">θ</unclear></del><unclear reason="undefined" cert="high">ηκε</unclear>ν</del></subst> κα-

    <lb n="16"/>θαρὸς παρ᾽ <choice><corr><supplied reason="lost" cert="high">ᾡ</supplied>τινιοῦν</corr><sic><supplied reason="lost" cert="high">ωι</supplied><unclear reason="undefined" cert="high">τ</unclear>ινιουν</sic></choice> ἀπο-

    <lb n="17"/><supplied reason="lost" cert="high">δ</supplied>οῦ ἵνα τιμ<supplied reason="lost" cert="high">ὴν </supplied><gap reason="lost" extent="1" unit="character"/><gap reason="illegible" extent="1" unit="character"/><unclear reason="undefined" cert="high">ρ</unclear><gap reason="illegible" extent="1" unit="character"/><gap reason="lost" extent="1" unit="character"/><gap reason="illegible" extent="1" unit="character"/> 

    <lb n="18"/>σωμεν τῶν <unclear reason="undefined" cert="high">γι</unclear>νο<unclear reason="undefined" cert="high">μέ</unclear>ν<supplied reason="lost" cert="high">ω</supplied><unclear reason="undefined" cert="high">ν</unclear> 

    <lb n="19"/>τῶν ἐπανάγκων, τῶν 

    <lb n="20"/>δὲ <subst><add place="inline">λοιπῶν</add><del rend="corrected" status="unremarkable">λοιπ<unclear reason="undefined" cert="high">ι</unclear>ν</del></subst> <unclear reason="undefined" cert="high">μ</unclear><gap reason="lost" extent="2" unit="character"/><gap reason="illegible" extent="1" unit="character"/><unclear reason="undefined" cert="high">α</unclear>χρου, 

    <lb n="21"/>χρεία γάρ ἐστιν <unclear reason="undefined" cert="high">μα</unclear><gap reason="illegible" extent="2" unit="character"/><unclear reason="undefined" cert="high">ικου</unclear>. 

    <lb n="22"/>καὶ ὄλυραν δὲ κ<supplied reason="lost" cert="high">αὶ κρ</supplied>ιθὴν 

    <lb n="23"/>ἑτοίμαζε ἵνα <supplied reason="lost" cert="high">παραμ</supplied><unclear reason="undefined" cert="high">ετρή</unclear>-

    <lb n="24"/>σωμεν εἰς τὸ βασιλικὸν. 

    <lb n="25"/>καὶ τοὺς μόσχους τοὺς πα-

    <lb n="26"/>ρὰ Φίλωνος τοῦ <choice><corr>Λυσανί<supplied reason="omitted" cert="high">ου</supplied></corr><sic>λυσανι</sic></choice> καὶ 

    <lb n="27"/>τὸν παρὰ Φίλωνος καὶ Σπο-

    <lb n="28"/>κέους εἰ μὲν <choice><corr>ἀπέσ<supplied reason="omitted" cert="high">ταλ</supplied>κας</corr><sic>απεσκας</sic></choice> εἰς 

    <lb n="29"/>Δικωμίαν, εἰ δὲ μὴ ἀπόσ-

    <lb n="30"/>τ<unclear reason="undefined" cert="high">ειλον</unclear> τ<gap reason="illegible" extent="3" unit="character"/>ν ἤδη ἵνα 

    <lb n="31"/>ἀποδοθῶσιν Λυκομήδῃ, 

    <lb n="32"/>οὕτω γὰρ συντέταχεν. 

    <lb n="33"/>καὶ τὴν ἐπιστολὴν ἀπό-

    <lb n="34"/>στειλον Δημητρίω<supplied reason="lost" cert="high">ι</supplied> 

    <lb n="35"/>ἐν τάχει ἵνα <unclear reason="undefined" cert="high">μὴ</unclear> παῖς 

    <lb n="36"/>ἀποσταλῇ.  ἔρρωσο. 

    <lb n="37"/><expan><ex cert="high">ἔτους</ex></expan> <num value="29">κ<unclear reason="undefined" cert="high">θ</unclear></num> Μεχεὶρ <num value="20">κ</num>. 
